<script>
// Enhanced Company Management JavaScript
class CompanyManager {
    constructor() {
        this.currentView = 'table';
        this.currentTab = 'all-companies';
        this.selectedCompanies = new Set();
        this.init();
    }

    init() {
        this.setupEventListeners();
        this.loadCompanies();
        this.initializeCharts();
    }

    setupEventListeners() {
        // Filter event listeners
        ['companyTypeFilter', 'companyStatusFilter', 'countryFilter', 'dateRangeFilter'].forEach(filterId => {
            document.getElementById(filterId)?.addEventListener('change', () => this.applyCompanyFilters());
        });

        // Search input
        const searchInput = document.getElementById('companySearch');
        if (searchInput) {
            let searchTimeout;
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => this.performCompanySearch(e.target.value), 500);
            });
        }

        // Tab switching
        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', (e) => {
                this.currentTab = e.target.getAttribute('data-bs-target').substring(1);
                this.loadTabContent();
            });
        });

        // Select all checkbox
        const selectAllCheckbox = document.getElementById('selectAllCompanies');
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', (e) => this.toggleSelectAll(e.target.checked));
        }
    }

    async loadCompanies() {
        try {
            // Simulate API call - replace with actual implementation
            const companies = this.getMockCompanies();
            this.renderCompanies(companies);
        } catch (error) {
            console.error('Failed to load companies:', error);
        }
    }

    getMockCompanies() {
        return [
            {
                id: 1,
                name: 'Silk Road Textiles',
                type: 'manufacturer',
                industry: 'Textiles & Apparel',
                country: 'uzbekistan',
                city: 'Tashkent',
                status: 'approved',
                registrationDate: '2024-01-10',
                logo: '/assets/img/company-placeholder.png'
            },
            {
                id: 2,
                name: 'Central Asia Distribution',
                type: 'distributor',
                industry: 'General Trade',
                country: 'kazakhstan',
                city: 'Almaty',
                status: 'pending',
                registrationDate: '2024-01-15',
                logo: '/assets/img/company-placeholder.png'
            }
        ];
    }

    renderCompanies(companies) {
        const tbody = document.getElementById('companiesTableBody');
        if (!tbody) return;

        if (companies.length === 0) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="8" class="text-center py-5">
                        <div class="empty-state">
                            <i class="las la-building empty-state-icon"></i>
                            <h5 class="empty-state-title">No Companies Found</h5>
                            <p class="empty-state-text">No companies match your current filters.</p>
                            <button class="btn btn-primary" onclick="window.companyManager.resetCompanyFilters()">
                                <i class="las la-redo"></i>
                                Reset Filters
                            </button>
                        </div>
                    </td>
                </tr>
            `;
            return;
        }

        tbody.innerHTML = companies.map(company => `
            <tr>
                <td>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input company-checkbox" 
                               value="${company.id}" onchange="window.companyManager.toggleCompanySelection(${company.id}, this.checked)">
                    </div>
                </td>
                <td>
                    <div class="company-info">
                        <div class="company-avatar-sm">
                            <img src="${company.logo}" alt="${company.name}" class="avatar">
                        </div>
                        <div class="company-details-sm">
                            <div class="company-name">${company.name}</div>
                            <div class="company-id">ID: ${company.id}</div>
                        </div>
                    </div>
                </td>
                <td>
                    <span class="company-type-badge type-${company.type}">
                        ${company.type.charAt(0).toUpperCase() + company.type.slice(1)}
                    </span>
                </td>
                <td>${company.industry}</td>
                <td>
                    <div class="location-info">
                        <img src="/assets/img/flags/${company.country}.svg" alt="${company.country}" class="country-flag">
                        ${company.city}, ${company.country.charAt(0).toUpperCase() + company.country.slice(1)}
                    </div>
                </td>
                <td>
                    <span class="company-status ${company.status}">${company.status.charAt(0).toUpperCase() + company.status.slice(1)}</span>
                </td>
                <td>${this.formatDate(company.registrationDate)}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary" onclick="window.companyManager.viewCompany(${company.id})" title="View Details">
                            <i class="las la-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="window.companyManager.editCompany(${company.id})" title="Edit">
                            <i class="las la-edit"></i>
                        </button>
                        ${company.status === 'pending' ? `
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="las la-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-success" href="#" onclick="window.companyManager.approveCompany(${company.id})">
                                    <i class="las la-check"></i> Approve
                                </a></li>
                                <li><a class="dropdown-item text-danger" href="#" onclick="window.companyManager.rejectCompany(${company.id})">
                                    <i class="las la-times"></i> Reject
                                </a></li>
                            </ul>
                        </div>
                        ` : ''}
                    </div>
                </td>
            </tr>
        `).join('');
    }

    formatDate(dateString) {
        return new Date(dateString).toLocaleDateString();
    }

    loadTabContent() {
        switch (this.currentTab) {
            case 'pending-approval':
                this.loadPendingApprovals();
                break;
            case 'manufacturers':
                this.loadManufacturers();
                break;
            case 'distributors':
                this.loadDistributors();
                break;
            case 'analytics':
                this.loadAnalytics();
                break;
        }
    }

    initializeCharts() {
        // Initialize metric charts
        ['activeCompaniesChart', 'pendingApprovalsChart', 'manufacturersChart', 'distributorsChart'].forEach(chartId => {
            const canvas = document.getElementById(chartId);
            if (canvas && window.AdminCharts) {
                window.AdminCharts.createMiniChart(canvas);
            }
        });
    }

    // Additional methods would be implemented here...
    applyCompanyFilters() {
        console.log('Applying company filters...');
        this.loadCompanies();
    }

    resetCompanyFilters() {
        ['companySearch', 'companyTypeFilter', 'companyStatusFilter', 'countryFilter', 'dateRangeFilter'].forEach(id => {
            const element = document.getElementById(id);
            if (element) element.value = '';
        });
        this.loadCompanies();
    }

    performCompanySearch(query) {
        console.log('Searching companies for:', query);
        this.loadCompanies();
    }

    toggleSelectAll(checked) {
        document.querySelectorAll('.company-checkbox').forEach(checkbox => {
            checkbox.checked = checked;
            this.toggleCompanySelection(parseInt(checkbox.value), checked);
        });
    }

    toggleCompanySelection(companyId, selected) {
        if (selected) {
            this.selectedCompanies.add(companyId);
        } else {
            this.selectedCompanies.delete(companyId);
        }
    }

    viewCompany(companyId) {
        console.log('Viewing company:', companyId);
    }

    editCompany(companyId) {
        console.log('Editing company:', companyId);
    }

    approveCompany(companyId) {
        console.log('Approving company:', companyId);
    }

    rejectCompany(companyId) {
        console.log('Rejecting company:', companyId);
    }

    loadPendingApprovals() {
        console.log('Loading pending approvals...');
    }

    loadManufacturers() {
        console.log('Loading manufacturers...');
    }

    loadDistributors() {
        console.log('Loading distributors...');
    }

    loadAnalytics() {
        console.log('Loading analytics...');
    }
}

