window.applyCompanyFilters = () => {
    if (window.companyManager) {
        window.companyManager.applyCompanyFilters();
    }
};

window.switchCompanyView = (view) => {
    ['table', 'grid'].forEach(v => {
        document.getElementById(`companies${v.charAt(0).toUpperCase() + v.slice(1)}View`)?.style.setProperty('display', v === view ? 'block' : 'none');
        document.querySelector(`[data-view="${v}"]`)?.classList.toggle('active', v === view);
    });
};

window.viewCompanyDetails = (companyId) => {
