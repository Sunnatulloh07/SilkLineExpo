<!-- Sidebar -->
<aside class="admin-sidebar">
  <div class="sidebar-content">
    <!-- Brand -->
    <a href="/admin/dashboard" class="sidebar-brand">
      <div class="sidebar-brand-logo">S</div>
      <span class="sidebar-brand-text">SilkInExpo</span>
    </a>

    <!-- Navigation -->
    <nav class="sidebar-nav">
      <!-- Dashboard Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          <%= typeof t !== 'undefined' ? t('admin.nav.overview') : 'Overview' %>
        </div>

        <a href="/admin/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.dashboard') : 'Dashboard' %>">
          <i class="fas fa-chart-pie nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.dashboard') : 'Dashboard' %></span>
        </a>

        <a href="/admin/analytics" class="nav-item <%= currentPage === 'analytics' ? 'active' : '' %>" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.analytics') : 'Analytics' %>">
          <i class="fas fa-chart-line nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.analytics') : 'Analytics' %></span>
        </a>
      </div>

      <!-- Management Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          <%= typeof t !== 'undefined' ? t('admin.nav.management') : 'Management' %>
        </div>

        <a href="/admin/users" class="nav-item <%= currentPage === 'users' ? 'active' : '' %>" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.users') : 'Users' %>">
          <i class="fas fa-users nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.users') : 'Users' %></span>
          <% if (typeof stats !== 'undefined' && stats.pendingApprovals > 0) { %>
            <span class="nav-badge badge-danger"><%= stats.pendingApprovals %></span>
          <% } %>
        </a>

        <a href="/admin/companies" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.companies') : 'Companies' %>">
          <i class="fas fa-building nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.companies') : 'Companies' %></span>
        </a>

        <a href="/admin/products" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.products') : 'Products' %>">
          <i class="fas fa-box nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.products') : 'Products' %></span>
        </a>

        <a href="/admin/orders" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.orders') : 'Orders' %>">
          <i class="fas fa-shopping-cart nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.orders') : 'Orders' %></span>
        </a>
      </div>

      <!-- Support Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          <%= typeof t !== 'undefined' ? t('admin.nav.support') : 'Support' %>
        </div>

        <a href="/admin/support/tickets" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.support_tickets') : 'Support Tickets' %>">
          <i class="fas fa-headset nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.support_tickets') : 'Support Tickets' %></span>
          <% if (typeof stats !== 'undefined' && stats.openTickets > 0) { %>
            <span class="nav-badge badge-warning"><%= stats.openTickets %></span>
          <% } %>
        </a>

        <a href="/admin/reports" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.reports') : 'Reports' %>">
          <i class="fas fa-file-alt nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.reports') : 'Reports' %></span>
        </a>
      </div>

      <!-- System Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          <%= typeof t !== 'undefined' ? t('admin.nav.system') : 'System' %>
        </div>

        <a href="/admin/system/settings" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.settings') : 'Settings' %>">
          <i class="fas fa-cog nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.settings') : 'Settings' %></span>
        </a>

        <a href="/admin/system/security" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.security') : 'Security' %>">
          <i class="fas fa-shield-alt nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.security') : 'Security' %></span>
        </a>

        <a href="/admin/system/logs" class="nav-item" data-tooltip="<%= typeof t !== 'undefined' ? t('admin.nav.system_logs') : 'System Logs' %>">
          <i class="fas fa-file-code nav-icon"></i>
          <span class="nav-text"><%= typeof t !== 'undefined' ? t('admin.nav.system_logs') : 'System Logs' %></span>
        </a>
      </div>
    </nav>


  </div>
</aside>
