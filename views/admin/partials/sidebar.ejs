<!-- Sidebar -->
<aside class="admin-sidebar">
  <div class="sidebar-content">
    <!-- Brand -->
    <a href="/admin/dashboard" class="sidebar-brand">
      <div class="sidebar-brand-logo">S</div>
      <span class="sidebar-brand-text">SilkInExpo</span>
    </a>

    <!-- Navigation -->
    <nav class="sidebar-nav">
      <!-- Dashboard Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          Umumiy ko'rinish
        </div>

        <a href="/admin/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>" data-tooltip="Boshqaruv paneli">
          <i class="fas fa-chart-pie nav-icon"></i>
          <span class="nav-text">Boshqaruv paneli</span>
        </a>

        <a href="/admin/analytics" class="nav-item <%= currentPage === 'analytics' ? 'active' : '' %>" data-tooltip="Analitika">
          <i class="fas fa-chart-line nav-icon"></i>
          <span class="nav-text">Analitika</span>
        </a>
      </div>

      <!-- Management Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          Boshqaruv
        </div>

        <a href="/admin/users" class="nav-item <%= currentPage === 'users' ? 'active' : '' %>" data-tooltip="Foydalanuvchilar">
          <i class="fas fa-users nav-icon"></i>
          <span class="nav-text">Foydalanuvchilar</span>
          <% if (typeof stats !== 'undefined' && stats.pendingApprovals > 0) { %>
            <span class="nav-badge badge-danger"><%= stats.pendingApprovals %></span>
          <% } %>
        </a>

        <a href="/admin/categories" class="nav-item <%= currentPage === 'categories' ? 'active' : '' %>" data-tooltip="Kategoriyalar">
          <i class="fas fa-list nav-icon"></i>
          <span class="nav-text">Kategoriyalar</span>
        </a>
        <a href="/admin/products" class="nav-item <%= currentPage === 'products' ? 'active' : '' %>" data-tooltip="Mahsulotlar">
          <i class="fas fa-box nav-icon"></i>
          <span class="nav-text">Mahsulotlar</span>
        </a>

        <a href="/admin/orders" class="nav-item <%= currentPage === 'orders' ? 'active' : '' %>" data-tooltip="Buyurtmalar">
          <i class="fas fa-shopping-cart nav-icon"></i>
          <span class="nav-text">Buyurtmalar</span>
        </a>
      </div>

      <!-- Support Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          Qo'llab-quvvatlash
        </div>

        <a href="/admin/support/tickets" class="nav-item" data-tooltip="Qo'llab-quvvatlash so'rovlari">
          <i class="fas fa-headset nav-icon"></i>
          <span class="nav-text">Qo'llab-quvvatlash so'rovlari</span>
          <% if (typeof stats !== 'undefined' && stats.openTickets > 0) { %>
            <span class="nav-badge badge-warning"><%= stats.openTickets %></span>
          <% } %>
        </a>

        <a href="/admin/reports" class="nav-item" data-tooltip="Hisobotlar">
          <i class="fas fa-file-alt nav-icon"></i>
          <span class="nav-text">Hisobotlar</span>
        </a>
      </div>

      <!-- System Section -->
      <div class="nav-section">
        <div class="nav-section-title">
          Tizim
        </div>

        <a href="/admin/settings" class="nav-item <%= currentPage === 'settings' ? 'active' : '' %>" data-tooltip="Sozlamalar">
          <i class="fas fa-cog nav-icon"></i>
          <span class="nav-text">Sozlamalar</span>
        </a>

        <a href="/admin/profile" class="nav-item <%= currentPage === 'profile' ? 'active' : '' %>" data-tooltip="Profil">
          <i class="fas fa-user-circle nav-icon"></i>
          <span class="nav-text">Profil</span>
        </a>

        <a href="/admin/system/security" class="nav-item" data-tooltip="Xavfsizlik">
          <i class="fas fa-shield-alt nav-icon"></i>
          <span class="nav-text">Xavfsizlik</span>
        </a>

        <a href="/admin/system/logs" class="nav-item" data-tooltip="Tizim jurnallari">
          <i class="fas fa-file-code nav-icon"></i>
          <span class="nav-text">Tizim jurnallari</span>
        </a>
      </div>
    </nav>


  </div>
</aside>
