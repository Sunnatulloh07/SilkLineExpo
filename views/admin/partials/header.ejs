<!DOCTYPE html>
<html lang="<%= typeof lng !== 'undefined' ? lng : 'uz' %>" class="theme-transition">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
  <title><%= typeof title !== 'undefined' ? title : 'SLEX Admin Dashboard' %></title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/assets/images/logo/favicon.png">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- CSS Libraries (Using Local Assets) -->
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
  <link rel="stylesheet" href="/assets/css/line-awesome.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/admin/css/admin-dashboard.css">
  <link rel="stylesheet" href="/admin/css/dashboard-components.css">
  <link rel="stylesheet" href="/admin/css/dashboard-loading.css">
  
  <!-- Page-specific CSS -->
  <% if (typeof title !== 'undefined' && title.includes('Profile')) { %>
    <link rel="stylesheet" href="/admin/css/profile-management.css">
  <% } %>
  
      <!-- PROFESSIONAL TOKEN MANAGEMENT SYSTEM - LOAD FIRST -->
    <script src="/js/token-manager.js"></script>
    <script src="/js/token-manager-fix.js"></script>
  
  <!-- DISABLE DASHBOARD PERFORMANCE TEMPORARILY -->
  <script>window.DISABLE_DASHBOARD_PERFORMANCE = false;</script>
  
  <!-- Performance Optimization - DISABLED FOR NOW -->
  <script src="/admin/js/dashboard-performance.js" defer></script>
  
  <!-- Unified Header Dropdown Management - DISABLED to prevent conflicts -->
  <!-- <script src="/admin/js/header-dropdown-fix.js" defer></script> -->
  
  <!-- Theme Variables -->
  <style>
    :root {
      --header-brand-text: '<%= typeof title !== 'undefined' ? title.split(' ')[0] : 'SLEX' %>';
    }
  </style>
</head>


<body class="theme-transition">
  <div class="admin-layout">
    
    <!-- Header -->
    <header class="admin-header">
      
      <!-- Left Section -->
      <div class="header-left">
        <!-- Mobile Menu Toggle -->
        <button id="mobileMenuToggle" class="header-action-btn mobile-only">
          <i class="fas fa-bars"></i>
        </button>
        
        <!-- Sidebar Toggle (Desktop) -->
        <button id="sidebarToggle" class="header-action-btn desktop-only">
          <i class="fas fa-bars"></i>
        </button>
        
        <!-- Brand Logo (Mobile) -->
      </div>
      
      <!-- Center Section - Search -->
      <div class="header-center">
        <div class="header-search">
          <i class="fas fa-search header-search-icon"></i>
          <input 
            type="text" 
            id="headerSearch"
            placeholder="Qidirish..."
            autocomplete="off"
          >
        </div>
      </div>
      
      <!-- Right Section -->
      <div class="header-right">
        
        
        <!-- Theme Toggle -->
        <button id="themeToggle" class="header-action-btn" data-tooltip="Rejimni o\'zgartirish">
          <i class="fas fa-moon theme-icon"></i>
        </button>
        
        <!-- Messages -->
        <div class="header-dropdown">
          <button id="messagesBtn" class="header-action-btn" data-tooltip="Xabarlar">
            <i class="fas fa-envelope"></i>
            <span class="notification-badge" id="messagesBadge" style="display: none;">0</span>
          </button>
          
          <!-- Messages Dropdown -->
          <div id="messagesDropdown" class="dropdown-menu messages-dropdown hidden">
            <div class="dropdown-header">
              <span class="dropdown-title">Xabarlar</span>
              <button class="btn-sm btn-ghost" onclick="markAllMessagesRead()">Hammasini o'qilgan deb belgilash</button>
            </div>
            <div class="dropdown-content" id="messagesContainer">
              <!-- Dynamic content loaded via JavaScript -->
              <div class="messages-loading">
                <div class="loading-spinner"></div>
                <span>Xabarlar yuklanmoqda...</span>
              </div>
            </div>
            <div class="dropdown-footer">
              <a href="/admin/messages" class="btn-sm btn-primary">Barcha xabarlarni ko'rish</a>
            </div>
          </div>
        </div>
        
        <!-- Notifications -->
        <div class="header-dropdown">
          <button id="notificationBtn" class="header-action-btn">
            <i class="fas fa-bell"></i>
            <% if (typeof stats !== 'undefined' && stats.pendingApprovals > 0) { %>
              <span class="notification-badge"><%= stats.pendingApprovals %></span>
            <% } %>
          </button>
          
          <!-- Notification Dropdown -->
          <div id="notificationDropdown" class="dropdown-menu notification-dropdown hidden">
            <div class="dropdown-header">
              <span class="dropdown-title">Bildirishnomalar</span>
              <button class="btn-sm btn-ghost" onclick="markAllNotificationsRead()">Barchasini o'qish</button>
            </div>
            <div class="dropdown-content" id="notificationsContainer">
              <!-- Dynamic content loaded via JavaScript -->
              <div class="notifications-loading">
                <div class="loading-spinner"></div>
                <span>Bildirishnomalar yuklanmoqda...</span>
              </div>
            </div>
            <div class="dropdown-footer">
              <a href="/admin/notifications" class="btn-sm btn-primary">Barcha bildirishnomalarni ko'rish</a>
            </div>
          </div>
        </div>
        
        <!-- User Avatar Menu -->
        <div class="header-dropdown">
          <button id="userMenuBtn" class="user-menu-btn">
            <div class="user-avatar">
              <%= typeof admin !== 'undefined' && admin.name ? admin.name.charAt(0).toUpperCase() : 'A' %>
            </div>
          </button>
          
          <!-- User Dropdown -->
          <div id="userDropdown" class="dropdown-menu user-dropdown hidden">
            <div class="dropdown-header">
              <div class="user-info-card">
                <div class="user-avatar large">
                  <%= typeof admin !== 'undefined' && admin.name ? admin.name.charAt(0).toUpperCase() : 'A' %>
                </div>
                <div class="user-details">
                  <div class="user-name">
                    <%= typeof admin !== 'undefined' && admin.name ? admin.name : 'Admin foydalanuvchi' %>
                  </div>
                  <div class="user-email">
                    <%= typeof admin !== 'undefined' && admin.email ? admin.email : 'admin@slex.uz' %>
                  </div>
                  <div class="user-role">
                    <%= typeof admin !== 'undefined' && admin.role ? admin.role : 'Super Admin' %>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="dropdown-content">
              <a href="/admin/profile" class="dropdown-item">
                <i class="fas fa-user dropdown-icon"></i>
                <span>Profil</span>
              </a>
              
              <a href="/admin/settings" class="dropdown-item">
                <i class="fas fa-cog dropdown-icon"></i>
                <span>Sozlamalar</span>
              </a>
              
              <a href="/admin/help" class="dropdown-item">
                <i class="fas fa-question-circle dropdown-icon"></i>
                <span>Yordam</span>
              </a>
              
              <div class="dropdown-divider"></div>
              
              <a href="/auth/logout" class="dropdown-item danger">
                <i class="fas fa-sign-out-alt dropdown-icon"></i>
                <span>Chiqish</span>
              </a>
            </div>
          </div>
        </div>
        
      </div>
    </header> 