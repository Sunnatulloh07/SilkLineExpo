<body class="admin-layout">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <%- include('../partials/sidebar', { currentPage: 'dashboard', user: user }) %>
        
        <!-- Main Content -->
        <div class="admin-main">
            <!-- Header -->
            <%- include('../partials/header', { 
                user: user, 
                title: 'Dashboard',
                breadcrumb: [
