<%- include('./partials/header', { title: title || 'Xatolik', lng: lng, user: user }) %>
<%- include('./partials/sidebar', { user: user, currentPage: 'error' }) %>

<!-- Professional Error Page for Manufacturer Dashboard -->
<div class="main-content error-page">
    <div class="error-container">
        <div class="error-content">
            <div class="error-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            
            <h1 class="error-title">Xatolik yuz berdi</h1>
            <h2 class="error-subtitle"><%= title || 'Server xatosi' %></h2>
            
            <p class="error-message">
                <%= message || 'Kechirasiz, serverda xatolik yuz berdi. Keyinroq qayta urinib ko\'ring.' %>
            </p>
            
            <div class="error-actions">
                <a href="/manufacturer/dashboard" class="btn btn-primary">
                    <i class="fas fa-home"></i>
                    Dashboard'ga qaytish
                </a>
                <button onclick="history.back()" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Orqaga
                </button>
            </div>
            
            <% if (error && process.env.NODE_ENV === 'development') { %>
                <div class="error-debug">
                    <details>
                        <summary>Debug ma'lumotlari (development)</summary>
                        <pre class="error-stack"><%= error.stack || error.message || JSON.stringify(error) %></pre>
                    </details>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Error Page Styles -->
<style>
.error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 60px);
    padding: var(--space-4);
}

.error-container {
    max-width: 600px;
    width: 100%;
    text-align: center;
}

.error-content {
    background: var(--bg-elevated);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: var(--space-8);
    box-shadow: var(--shadow-lg);
}

.error-icon {
    font-size: 4rem;
    color: var(--color-warning);
    margin-bottom: var(--space-4);
}

.error-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--space-2) 0;
}

.error-subtitle {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin: 0 0 var(--space-4) 0;
}

.error-message {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0 0 var(--space-6) 0;
}

.error-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-4);
}

.error-actions .btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
}

.error-actions .btn-primary {
    background: var(--color-primary);
    color: white;
    border: none;
}

.error-actions .btn-primary:hover {
    background: var(--color-primary-dark);
    transform: translateY(-1px);
}

.error-actions .btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
}

.error-actions .btn-secondary:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-focus);
}

.error-debug {
    margin-top: var(--space-4);
    text-align: left;
}

.error-debug details {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    padding: var(--space-3);
}

.error-debug summary {
    cursor: pointer;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
}

.error-stack {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    padding: var(--space-3);
    font-size: 0.75rem;
    color: var(--text-muted);
    overflow-x: auto;
    white-space: pre-wrap;
    word-break: break-word;
}

/* Mobile responsive */
@media (max-width: 768px) {
    .error-page {
        padding: var(--space-2);
    }
    
    .error-content {
        padding: var(--space-4);
    }
    
    .error-icon {
        font-size: 3rem;
    }
    
    .error-title {
        font-size: 1.5rem;
    }
    
    .error-actions {
        flex-direction: column;
    }
    
    .error-actions .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>

