          <span class="nav-text">Qo'shish</span>
        </a> -->

        <a href="/manufacturer/inventory" class="nav-item <%= currentPage === 'inventory' ? 'active' : '' %>" data-tooltip="Ombor boshqaruvi">
          <i class="fas fa-warehouse nav-icon"></i>
          <span class="nav-text">Ombor</span>
          <% if (typeof lowStock !== 'undefined' && lowStock > 0) { %>
            <span class="nav-badge badge-warning"><%= lowStock %></span>
          <% } %>
        </a>
      </div>

      <!-- Orders & Communication -->
      <div class="nav-section">
        <div class="nav-section-title">Savdo</div>

        <a href="/manufacturer/orders" class="nav-item <%= currentPage === 'orders' ? 'active' : '' %>" data-tooltip="Buyurtmalar">
          <i class="fas fa-clipboard-list nav-icon"></i>
          <span class="nav-text">Buyurtmalar</span>
          <% if (typeof pendingOrders !== 'undefined' && pendingOrders > 0) { %>
            <span class="nav-badge badge-danger"><%= pendingOrders %></span>
          <% } %>
        </a>

        <a href="/manufacturer/inquiries" class="nav-item <%= currentPage === 'inquiries' ? 'active' : '' %>" data-tooltip="So'rovlar">
          <i class="fas fa-envelope nav-icon"></i>
          <span class="nav-text">So'rovlar</span>
          <% if (typeof newInquiries !== 'undefined' && newInquiries > 0) { %>
            <span class="nav-badge badge-info"><%= newInquiries %></span>
          <% } %>
        </a>

        <a href="/manufacturer/messages" class="nav-item <%= currentPage === 'messages' ? 'active' : '' %>" data-tooltip="Xabarlar">
          <i class="fas fa-comments nav-icon"></i>
          <span class="nav-text">Xabarlar</span>
          <% if (typeof unreadMessages !== 'undefined' && unreadMessages > 0) { %>
            <span class="nav-badge badge-primary"><%= unreadMessages %></span>
          <% } %>
        </a>

        <a href="/manufacturer/shipping" class="nav-item <%= currentPage === 'shipping' ? 'active' : '' %>" data-tooltip="Yetkazib berish">
          <i class="fas fa-truck nav-icon"></i>
          <span class="nav-text">Yetkazib berish</span>
        </a>

        <a href="/manufacturer/analytics" class="nav-item <%= currentPage === 'analytics' ? 'active' : '' %>" data-tooltip="Tahlillar">
          <i class="fas fa-chart-bar nav-icon"></i>
          <span class="nav-text">Tahlillar</span>
        </a>
      </div>

      <!-- System Section -->
      <div class="nav-section">
        <div class="nav-section-title">Tizim</div>

        <a href="/manufacturer/settings" class="nav-item <%= currentPage === 'settings' ? 'active' : '' %>" data-tooltip="Sozlamalar">
