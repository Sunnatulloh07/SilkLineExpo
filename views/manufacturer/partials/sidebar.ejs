          <span class="nav-text">Sotuv xizmatlari</span>
        </a>
      </div>

      <!-- Products & Inventory -->
      <div class="nav-section">
        <div class="nav-section-title">Mahsulotlar</div>

        <a href="/manufacturer/products" class="nav-item <%= currentPage === 'products' ? 'active' : '' %>" data-tooltip="Mahsulotlar ro'yxati">
          <i class="fas fa-box-open nav-icon"></i>
          <span class="nav-text">Mahsulotlar</span>
        </a>

