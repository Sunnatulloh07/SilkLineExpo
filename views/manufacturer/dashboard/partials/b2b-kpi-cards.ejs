<!-- Core B2B KPI Cards - 4 Main Metrics -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-lg mb-lg">
  
  <!-- Total Sales Revenue -->
  <div class="stat-card animate-fade-in" data-kpi="totalSales">
    <div class="stat-header">
      <h3 class="stat-title"><%= t('manufacturer.dashboard.kpiCards.totalSales') %></h3>
      <div class="stat-icon">
        <i class="fas fa-chart-line"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="totalSalesValue">
        <span class="loading-placeholder">...</span>
      </span>
    </div>
    <div class="stat-change" id="totalSalesTrend">
      <span class="kpi-trend"><%= t('manufacturer.dashboard.loadingStates.loadingData') %></span>
    </div>
  </div>
  
  <!-- Active B2B Orders -->
  <div class="stat-card success animate-fade-in" data-kpi="activeOrders">
    <div class="stat-header">
      <h3 class="stat-title"><%= t('manufacturer.dashboard.kpiCards.activeOrders') %></h3>
      <div class="stat-icon success">
        <i class="fas fa-clipboard-list"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="activeOrdersValue">
        <span class="loading-placeholder">...</span>
      </span>
    </div>
    <div class="stat-change" id="activeOrdersTrend">
      <span class="kpi-trend"><%= t('manufacturer.dashboard.loadingStates.loadingData') %></span>
    </div>
  </div>
  
  <!-- Products in Marketplace -->
  <div class="stat-card info animate-fade-in" data-kpi="totalProducts">
    <div class="stat-header">
      <h3 class="stat-title"><%= t('manufacturer.dashboard.kpiCards.totalProducts') %></h3>
      <div class="stat-icon info">
        <i class="fas fa-store"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="totalProductsValue">
        <span class="loading-placeholder">...</span>
      </span>
    </div>
    <div class="stat-change" id="totalProductsTrend">
      <span class="kpi-trend"><%= t('manufacturer.dashboard.loadingStates.loadingData') %></span>
    </div>
  </div>
  
  <!-- Distributor Inquiries -->
  <div class="stat-card warning animate-fade-in" data-kpi="inquiries">
    <div class="stat-header">
      <h3 class="stat-title"><%= t('manufacturer.dashboard.kpiCards.inquiries') %></h3>
      <div class="stat-icon warning">
        <i class="fas fa-handshake"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="inquiriesValue">
        <span class="loading-placeholder">...</span>
      </span>
    </div>
    <div class="stat-change" id="inquiriesTrend">
      <span class="kpi-trend"><%= t('manufacturer.dashboard.loadingStates.loadingData') %></span>
    </div>
  </div>
  
</div>