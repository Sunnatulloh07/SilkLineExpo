<!-- Core B2B KPI Cards - 4 Main Metrics -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-lg mb-lg">
  
  <!-- Total Sales Revenue -->
  <div class="stat-card animate-fade-in" data-kpi="totalSales">
    <div class="stat-header">
      <h3 class="stat-title">Umumiy savdo</h3>
      <div class="stat-icon">
        <i class="fas fa-chart-line"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="totalSalesValue">
        <% if (typeof stats !== 'undefined' && stats.totalSales) { %>
          $<%= stats.totalSales.toLocaleString() %>
        <% } else { %>
          <span class="loading-placeholder">...</span>
        <% } %>
      </span>
    </div>
    <div class="stat-change positive">
      <i class="fas fa-arrow-up stat-change-icon"></i>
      <span class="kpi-trend">+12.5% o'tgan oydan</span>
    </div>
  </div>
  
  <!-- Active B2B Orders -->
  <div class="stat-card success animate-fade-in" data-kpi="activeOrders">
    <div class="stat-header">
      <h3 class="stat-title">Faol buyurtmalar</h3>
      <div class="stat-icon success">
        <i class="fas fa-clipboard-list"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="activeOrdersValue">
        <% if (typeof stats !== 'undefined' && stats.activeOrders) { %>
          <%= stats.activeOrders.toLocaleString() %>
        <% } else { %>
          <span class="loading-placeholder">...</span>
        <% } %>
      </span>
    </div>
    <div class="stat-change positive">
      <i class="fas fa-arrow-up stat-change-icon"></i>
      <span class="kpi-trend">+3 ta yangi</span>
    </div>
  </div>
  
  <!-- Products in Marketplace -->
  <div class="stat-card info animate-fade-in" data-kpi="totalProducts">
    <div class="stat-header">
      <h3 class="stat-title">Marketplace mahsulotlar</h3>
      <div class="stat-icon info">
        <i class="fas fa-store"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="totalProductsValue">
        <% if (typeof stats !== 'undefined' && stats.totalProducts) { %>
          <%= stats.totalProducts.toLocaleString() %>
        <% } else { %>
          <span class="loading-placeholder">...</span>
        <% } %>
      </span>
    </div>
    <div class="stat-change positive">
      <i class="fas fa-arrow-up stat-change-icon"></i>
      <span class="kpi-trend">+8 ta yangi</span>
    </div>
  </div>
  
  <!-- Distributor Inquiries -->
  <div class="stat-card warning animate-fade-in" data-kpi="inquiries">
    <div class="stat-header">
      <h3 class="stat-title">Distributorlar so'rovi</h3>
      <div class="stat-icon warning">
        <i class="fas fa-handshake"></i>
      </div>
    </div>
    <div class="stat-value">
      <span class="kpi-value" id="inquiriesValue">
        <% if (typeof stats !== 'undefined' && stats.inquiries) { %>
          <%= stats.inquiries.toLocaleString() %>
        <% } else { %>
          <span class="loading-placeholder">...</span>
        <% } %>
      </span>
    </div>
    <div class="stat-change">
      <span class="kpi-trend">Javob kutmoqda</span>
    </div>
  </div>
  
</div>