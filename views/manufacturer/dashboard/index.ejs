<%- include('../partials/header', { title: title, lng: lng, user: user, t: t }) %>
<%- include('../partials/sidebar', { user: user, currentPage: 'dashboard', t: t }) %>

<!-- Translation function is provided by app.js middleware -->

<!-- Main Content -->
<main class="admin-main">
  <div class="admin-content">
    
    <!-- Error Message Alert -->
    <% if (locals.errorMessage) { %>
      <div class="alert alert-warning animate-fade-in" style="margin-bottom: 1.5rem; padding: 1rem; background: #fff3cd; border: 1px solid #ffecb5; border-radius: 8px; color: #856404;">
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <i class="fas fa-exclamation-triangle" style="color: #f0ad4e;"></i>
          <strong><%= t('manufacturer.dashboard.alerts.attention') %></strong> <%= errorMessage %>
        </div>
      </div>
    <% } %>
    
    <!-- B2B Marketplace Status Banner -->
    <div class="platform-status animate-fade-in status-healthy">
      <div class="status-content">
        <div class="status-icon">
          <i class="fas fa-store"></i>
        </div>
        <div>
          <div class="status-text">
            <%= t('manufacturer.dashboard.platformStatus.title') %>
          </div>
          <div class="status-subtext">
            <%= t('manufacturer.dashboard.platformStatus.subtitle') %>
          </div>
        </div>
      </div>
      </div>
    
    <!-- Enhanced B2B KPI Cards -->
    <%- include('./partials/b2b-kpi-cards', { stats: stats, t: t }) %>
    
    <!-- Charts and Actions Row -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-lg mb-lg">
      
      <!-- B2B Sales Analytics Chart -->
      <div class="col-span-2">
        <div class="chart-container animate-fade-in">
          <div class="chart-header">
            <h3 class="chart-title"><%= t('manufacturer.dashboard.charts.salesAnalytics') %></h3>
            <div class="chart-actions">
              <select id="chartPeriodFilter" class="chart-period-select">
                <option value="7"><%= t('manufacturer.dashboard.charts.periodFilter.7days') %></option>
                <option value="30" selected><%= t('manufacturer.dashboard.charts.periodFilter.30days') %></option>
                <option value="90"><%= t('manufacturer.dashboard.charts.periodFilter.90days') %></option>
              </select>
              <button id="refreshChart" class="chart-refresh-btn" title="<%= t('manufacturer.dashboard.charts.refreshChart') %>">
                <i class="fas fa-sync-alt"></i>
              </button>
            </div>
          </div>
          <div class="chart-body">
            <div id="growthChart" class="chart-placeholder">
              <canvas id="salesChart" width="400" height="200"></canvas>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="col-span-1">
        <div class="quick-actions animate-fade-in">
          <div class="quick-actions-header">
            <h3 class="quick-actions-title"><%= t('manufacturer.dashboard.quickActions.title') %></h3>
          </div>
          <div class="quick-actions-grid">
            
            <a href="/manufacturer/products/add" class="quick-action" data-action="add-product">
              <div class="quick-action-icon">
                <i class="fas fa-plus-circle"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.addProduct') %></div>
            </a>
            
            <a href="/manufacturer/inquiries" class="quick-action" data-action="view-inquiries">
              <div class="quick-action-icon">
                <i class="fas fa-envelope-open"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.viewInquiries') %></div>
            </a>
            
            <a href="/manufacturer/messages" class="quick-action" data-action="messages">
              <div class="quick-action-icon">
                <i class="fas fa-comments"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.messages') %></div>
            </a>
            
            <a href="/manufacturer/inventory" class="quick-action" data-action="inventory">
              <div class="quick-action-icon">
                <i class="fas fa-warehouse"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.inventory') %></div>
            </a>
            
            <a href="/manufacturer/shipping" class="quick-action" data-action="shipping">
              <div class="quick-action-icon">
                <i class="fas fa-truck"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.shipping') %></div>
            </a>
            
            <a href="/manufacturer/analytics" class="quick-action" data-action="analytics">
              <div class="quick-action-icon">
                <i class="fas fa-chart-bar"></i>
              </div>
              <div class="quick-action-text"><%= t('manufacturer.dashboard.quickActions.analytics') %></div>
            </a>
            
          </div>
        </div>
      </div>
      
    </div>
    
    <!-- Additional Widgets Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-lg mb-lg">
      
      <!-- Top Products Widget -->
      <div class="widget-card animate-fade-in">
        <div class="widget-header">
          <h3 class="widget-title">
            <i class="fas fa-star"></i> <%= t('manufacturer.dashboard.widgets.topProducts.title') %>
          </h3>
          <div class="widget-actions">
            <a href="/manufacturer/products" class="widget-action-link"><%= t('manufacturer.dashboard.widgets.topProducts.viewAll') %></a>
          </div>
        </div>
        <div class="widget-body">
          <div class="top-products-list" id="topProductsList">
            <!-- Top Products will be loaded here dynamically -->
            <div class="loading-placeholder" id="topProductsLoader">
              <div class="loading-spinner"></div>
              <p><%= t('manufacturer.dashboard.widgets.topProducts.loading') %></p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent B2B Orders -->
      <div class="widget-card animate-fade-in">
        <div class="widget-header">
          <h3 class="widget-title">
            <i class="fas fa-handshake"></i> <%= t('manufacturer.dashboard.widgets.recentOrders.title') %>
          </h3>
          <div class="widget-actions">
            <a href="/manufacturer/orders" class="widget-action-link"><%= t('manufacturer.dashboard.widgets.recentOrders.viewAll') %></a>
          </div>
        </div>
        <div class="widget-body">
          <div class="orders-list" id="recentOrdersList">
            <!-- Recent Orders will be loaded here dynamically -->
            <div class="loading-placeholder" id="recentOrdersLoader">
              <div class="loading-spinner"></div>
              <p><%= t('manufacturer.dashboard.widgets.recentOrders.loading') %></p>
            </div>
          </div>
        </div>
      </div>
      
    </div>
    
    <!-- B2B Marketplace Management Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-lg mb-lg">
      
      <!-- Distributorlar So'rovlari -->
      <div class="widget-card">
        <div class="widget-header">
          <h3 class="widget-title">
            <i class="fas fa-handshake"></i>
            <%= t('manufacturer.dashboard.widgets.distributorInquiries.title') %>
          </h3>
          <a href="/manufacturer/inquiries" class="view-all-link"><%= t('manufacturer.dashboard.widgets.distributorInquiries.viewAll') %></a>
        </div>
        <div class="widget-content">
          <div class="inquiry-list" id="distributorInquiriesList">
            <!-- Distributor Inquiries will be loaded here dynamically -->
            <div class="loading-placeholder" id="inquiriesLoader">
              <div class="loading-spinner"></div>
              <p><%= t('manufacturer.dashboard.widgets.distributorInquiries.loading') %></p>
            </div>
          </div>
        </div>
      </div>

      
    </div>
    
    <!-- Communication & Inventory Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-lg mb-lg">
      
      <!-- Real-time Communication Center -->
      <div class="widget-card animate-fade-in">
        <div class="widget-header">
          <h3 class="widget-title">
            <i class="fas fa-satellite-dish"></i> <%= t('manufacturer.dashboard.widgets.communicationCenter.title') %>
          </h3>
          <div class="widget-actions">
            <a href="/manufacturer/messages" class="widget-action-link"><%= t('manufacturer.dashboard.widgets.communicationCenter.viewAll') %></a>
          </div>
        </div>
        <div class="widget-body">
          <div class="chat-preview-list" id="chatPreviewsList">
            <!-- Chat previews will be loaded here dynamically -->
            <div class="loading-placeholder" id="chatLoader">
              <div class="loading-spinner"></div>
              <p><%= t('manufacturer.dashboard.widgets.communicationCenter.loading') %></p>
            </div>
          </div>
          
          <div class="communication-stats">
            <div class="stat-item">
              <span class="stat-label"><%= t('manufacturer.dashboard.widgets.communicationCenter.activeChats') %></span>
              <span class="stat-value" id="activeChatsStat">...</span>
            </div>
            <div class="stat-item">
              <span class="stat-label"><%= t('manufacturer.dashboard.widgets.communicationCenter.averageResponseTime') %></span>
              <span class="stat-value" id="responseTimeStat">...</span>
            </div>
            <div class="stat-item">
              <span class="stat-label"><%= t('manufacturer.dashboard.widgets.communicationCenter.todayMessages') %></span>
              <span class="stat-value" id="todayMessagesStat">...</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Inventory & Stock Management -->
      <div class="widget-card animate-fade-in">
        <div class="widget-header">
          <h3 class="widget-title">
            <i class="fas fa-warehouse"></i> <%= t('manufacturer.dashboard.widgets.inventoryManagement.title') %>
          </h3>
          <div class="widget-actions">
            <a href="/manufacturer/inventory" class="widget-action-link"><%= t('manufacturer.dashboard.widgets.inventoryManagement.viewAll') %></a>
          </div>
        </div>
        <div class="widget-body">
          <div class="inventory-overview">
            
            <!-- Stock Level Summary -->
            <div class="stock-summary">
              <div class="summary-item good">
                <div class="summary-icon">
                  <i class="fas fa-check-circle"></i>
                </div>
                <div class="summary-info">
                  <h4 class="summary-title"><%= t('manufacturer.dashboard.widgets.inventoryManagement.stockSummary.normalStock') %></h4>
                  <span class="summary-count" id="normalStockCount">
                    <span class="loading-placeholder">...</span>
                  </span>
                </div>
              </div>
              
              <div class="summary-item warning">
                <div class="summary-icon">
                  <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="summary-info">
                  <h4 class="summary-title"><%= t('manufacturer.dashboard.widgets.inventoryManagement.stockSummary.lowStock') %></h4>
                  <span class="summary-count" id="lowStockCount">
                    <span class="loading-placeholder">...</span>
                  </span>
                </div>
              </div>
              
              <div class="summary-item danger">
                <div class="summary-icon">
                  <i class="fas fa-times-circle"></i>
                </div>
                <div class="summary-info">
                  <h4 class="summary-title"><%= t('manufacturer.dashboard.widgets.inventoryManagement.stockSummary.outOfStock') %></h4>
                  <span class="summary-count" id="outOfStockCount">
                    <span class="loading-placeholder">...</span>
                  </span>
                </div>
              </div>
            </div>
            
            <!-- Critical Stock Items -->
            <div class="critical-stock">
              <h4 class="section-title"><%= t('manufacturer.dashboard.widgets.inventoryManagement.criticalItems.title') %></h4>
              <div class="critical-items-container" id="criticalItemsList">
                <div class="loading-placeholder-item">
                  <div class="loading-placeholder"><%= t('manufacturer.dashboard.widgets.inventoryManagement.criticalItems.loading') %></div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
      
    </div>
    
  </div>
</main>

<!-- ApexCharts (Local - CSP Safe) -->
<script src="/assets/js/apexchart.js"></script>

<!-- Core JavaScript Dependencies -->
<script src="/assets/js/jquery-3.7.1.min.js"></script>
<script src="/assets/js/boostrap.bundle.min.js"></script>

<!-- Manufacturer Dashboard Core -->
<script src="/js/manufacturer/dashboard-init.js"></script>

<!-- Professional Unified Header Management (loaded after dashboard-init.js) -->
<script src="/js/manufacturer/manufacturer-header.js"></script>

<!-- Manufacturer Specific Scripts -->
<script src="/js/manufacturer/manufacturer-dashboard.js"></script>


<style>
/* Loading placeholder styles */
.loading-placeholder {
    display: inline-block;
    /* background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%); */
    background-size: 200% 100%;
    /* animation: loading-shimmer 1.5s infinite; */
    border-radius: 4px;
    /* color: transparent; */
    min-width: 40px;
    height: 1em;
}

@keyframes loading-shimmer {
    0% {
        background-position: -200% 0;
    }
    100% {
        background-position: 200% 0;
    }
}

/* Updated data indicator */
.kpi-value.updated,
.status-metric-value.updated {
    animation: data-updated 0.5s ease-in-out;
}

@keyframes data-updated {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

/* Company logo placeholder styles */
.company-logo-placeholder {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
}

.chat-avatar-placeholder {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #10b981, #059669);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
}

/* Dark theme adjustments */
[data-theme="dark"] .company-logo-placeholder {
    background: linear-gradient(135deg, #60a5fa, #a78bfa);
}

[data-theme="dark"] .chat-avatar-placeholder {
    background: linear-gradient(135deg, #34d399, #10b981);
}

/* No data state styles */
.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
    min-height: 200px;
    color: #6b7280;
}

.no-data-icon {
    font-size: 3rem;
    color: #d1d5db;
    margin-bottom: 1rem;
}

.no-data h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #4b5563;
}

.no-data p {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
    color: #6b7280;
    max-width: 300px;
}

/* Dark theme adjustments for no-data */
[data-theme="dark"] .no-data {
    color: #9ca3af;
}

[data-theme="dark"] .no-data-icon {
    color: #4b5563;
}

[data-theme="dark"] .no-data h4 {
    color: #d1d5db;
}

[data-theme="dark"] .no-data p {
    color: #9ca3af;
}
</style>

</body>
</html>