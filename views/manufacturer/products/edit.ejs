<%- include('../partials/header', { title: title, lng: lng, user: user }) %>
<%- include('../partials/sidebar', { user: user, currentPage: 'products' }) %>

<!-- Main Content -->
<main class="admin-main">
  <div class="admin-content">
    
    <!-- Product Edit Header -->
    <div class="product-header animate-fade-in">
      <div class="header-content">
        <div class="header-title-section">
          <div class="breadcrumb">
            <a href="/manufacturer/dashboard" class="breadcrumb-link">Dashboard</a>
            <i class="fas fa-chevron-right breadcrumb-separator"></i>
            <a href="/manufacturer/marketplace" class="breadcrumb-link">Marketplace</a>
            <i class="fas fa-chevron-right breadcrumb-separator"></i>
            <span class="breadcrumb-current">Mahsulotni tahrirlash</span>
          </div>
          <h1 class="page-title">
            <i class="fas fa-edit"></i>
            Mahsulotni tahrirlash
          </h1>
          <p class="page-subtitle">Professional B2B mahsulot ma'lumotlarini yangilang</p>
        </div>
        <div class="header-actions">
          <button class="btn-outline" id="previewBtn">
            <i class="fas fa-eye"></i>
            Ko'rish
          </button>
          <button class="btn-secondary" id="saveAsDraftBtn">
            <i class="fas fa-save"></i>
            Qoralama sifatida saqlash
          </button>
          <button class="btn-primary" id="publishBtn">
            <i class="fas fa-rocket"></i>
            Chop etish
          </button>
        </div>
      </div>
    </div>

    <!-- Error Message Alert -->
    <% if (locals.errorMessage) { %>
      <div class="alert alert-warning animate-fade-in" style="margin: 1rem 0; padding: 1rem; background: #fff3cd; border: 1px solid #ffecb5; border-radius: 8px; color: #856404;">
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <i class="fas fa-exclamation-triangle" style="color: #f0ad4e;"></i>
          <strong>Diqqat!</strong> <%= errorMessage %>
        </div>
      </div>
    <% } %>

    <div class="product-edit-container">
      <!-- Left Side: Form -->
      <div class="form-container">
        
        <!-- Multi-step Form -->
        <form id="productEditForm" class="multi-step-form" novalidate>
          <input type="hidden" name="productId" value="<%= product._id %>">
          
          <!-- Progress Indicator -->
          <div class="form-progress animate-fade-in">
            <div class="progress-steps">
              <div class="step active" data-step="1">
                <div class="step-number">1</div>
                <div class="step-label">Asosiy ma'lumotlar</div>
              </div>
              <div class="step" data-step="2">
                <div class="step-number">2</div>
                <div class="step-label">Narxlar va MOQ</div>
              </div>
              <div class="step" data-step="3">
                <div class="step-number">3</div>
                <div class="step-label">Texnik xususiyatlar</div>
              </div>
              <div class="step" data-step="4">
                <div class="step-number">4</div>
                <div class="step-label">Rasmlar</div>
              </div>
              <div class="step" data-step="5">
                <div class="step-number">5</div>
                <div class="step-label">Yetkazib berish</div>
              </div>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: 20%;"></div>
            </div>
          </div>

          <!-- Step 1: Basic Information -->
          <div class="form-step active" data-step="1">
            <div class="step-header">
              <h3>Asosiy ma'lumotlar</h3>
              <p class="step-description">Mahsulot haqida umumiy ma'lumotlarni kiriting</p>
            </div>
            
            <div class="form-grid">
              <div class="form-group full-width">
                <label for="productName" class="form-label required">
                  <i class="fas fa-tag"></i>
                  Mahsulot nomi
                </label>
                <input 
                  type="text" 
                  id="productName" 
                  name="name" 
                  class="form-input" 
                  value="<%= product.name || '' %>"
                  placeholder="Masalan: Premium Paxta Mato" 
                  required
                  maxlength="200"
                >
                <div class="form-hint">Xaridorlarga tushunarligi uchun aniq va tavsiflovchi nom kiriting</div>
                <div class="validation-message"></div>
              </div>
              
              <div class="form-group">
                <label for="category" class="form-label required">
                  <i class="fas fa-th-large"></i>
                  Kategoriya
                </label>
                <select id="category" name="category" class="form-select" required>
                  <option value="">Kategoriyani tanlang...</option>
                  <% categories.forEach(function(cat) { %>
                    <%
                      // Professional ObjectId comparison fix - Senior Software Engineer Logic
                      let isSelected = false;
                      if (product.category) {
                        if (typeof product.category === 'object' && product.category._id) {
                          // Product category is populated object
                          isSelected = product.category._id.toString() === cat._id.toString();
                        } else if (typeof product.category === 'string') {
                          // Product category is string ID
                          isSelected = product.category.toString() === cat._id.toString();
                        } else {
                          // Direct ObjectId comparison
                          isSelected = product.category.toString() === cat._id.toString();
                        }
                      }
                    %>
                    <option value="<%= cat._id %>" 
                            <%= isSelected ? 'selected' : '' %>
                            data-level="<%= cat.level || 0 %>"
                            data-category-name="<%= cat.displayName || cat.name %>"
                            <% if (cat.description) { %>title="<%= cat.description %>"<% } %>>
                      <%= cat.displayName || cat.name %>
                    </option>
                  <% }) %>
                </select>
                <div class="validation-message"></div>
              </div>
              
              <div class="form-group">
                <label for="productStatus" class="form-label">
                  <i class="fas fa-toggle-on"></i>
                  Mahsulot holati
                </label>
                <select id="productStatus" name="status" class="form-select">
                  <option value="active" <%= (product.status === 'active') ? 'selected' : '' %>>Faol</option>
                  <option value="inactive" <%= (product.status === 'inactive') ? 'selected' : '' %>>Nofaol</option>
                  <option value="draft" <%= (product.status === 'draft') ? 'selected' : '' %>>Qoralama</option>
                </select>
              </div>
              
              <div class="form-group full-width">
                <label for="shortDescription" class="form-label">
                  <i class="fas fa-align-left"></i>
                  Qisqacha tavsif
                </label>
                <textarea 
                  id="shortDescription" 
                  name="shortDescription" 
                  class="form-textarea" 
                  rows="3" 
                  placeholder="Mahsulot haqida qisqacha ma'lumot..."
                  maxlength="500"
                ><%= product.shortDescription || '' %></textarea>
                <div class="form-hint">Qidiruv natijalarida ko'rsetiladi (maksimal 500 belgi)</div>
              </div>
              
              <div class="form-group full-width">
                <label for="description" class="form-label required">
                  <i class="fas fa-file-text"></i>
                  Batafsil tavsif
                </label>
                <textarea 
                  id="description" 
                  name="description" 
                  class="form-textarea rich-editor" 
                  rows="6" 
                  placeholder="Mahsulot haqida batafsil ma'lumot, xususiyatlari, ishlatilishi..."
                  required
                  maxlength="2000"
                ><%= product.description || '' %></textarea>
                <div class="form-hint">Xaridorlarga to'liq ma'lumot berish uchun batafsil yozing</div>
                <div class="validation-message"></div>
              </div>
            </div>
          </div>

          <!-- Step 2: Pricing & MOQ -->
          <div class="form-step" data-step="2">
            <div class="step-header">
              <h3>Narxlar va miqdor</h3>
              <p class="step-description">Narx siyosati va minimum buyurtma miqdorini belgilang</p>
            </div>
            
            <div class="form-grid">
              <div class="form-group">
                <label for="basePrice" class="form-label required">
                  <i class="fas fa-dollar-sign"></i>
                  Bazaviy narx (USD)
                </label>
                <div class="price-input-wrapper">
                  <span class="price-currency">$</span>
                  <input 
                    type="number" 
                    id="basePrice" 
                    name="pricing.basePrice" 
                    class="form-input price-input" 
                    step="0.01" 
                    min="0"
                    value="<%= product.pricing?.basePrice || '' %>"
                    placeholder="0.00"
                    required
                  >
                </div>
                <div class="validation-message"></div>
              </div>
              
              <div class="form-group">
                <label for="priceType" class="form-label">
                  <i class="fas fa-hand-holding-usd"></i>
                  Narx turi
                </label>
                <select id="priceType" name="pricing.priceType" class="form-select">
                  <option value="fixed" <%= (product.pricing?.priceType === 'fixed') ? 'selected' : '' %>>Qat'iy narx</option>
                  <option value="negotiable" <%= (product.pricing?.priceType === 'negotiable') ? 'selected' : '' %>>Kelishiladi</option>
                  <option value="quote_based" <%= (product.pricing?.priceType === 'quote_based') ? 'selected' : '' %>>Taklif asosida</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="minOrderQty" class="form-label required">
                  <i class="fas fa-sort-numeric-up"></i>
                  Minimum buyurtma miqdori (MOQ)
                </label>
                <input 
                  type="number" 
                  id="minOrderQty" 
                  name="pricing.minimumOrderQuantity" 
                  class="form-input" 
                  min="1"
                  value="<%= product.pricing?.minimumOrderQuantity || '' %>"
                  placeholder="100"
                  required
                >
                <div class="form-hint">Eng kam buyurtma miqdori</div>
                <div class="validation-message"></div>
              </div>
              
              <div class="form-group">
                <label for="maxOrderQty" class="form-label">
                  <i class="fas fa-sort-numeric-down"></i>
                  Maksimum buyurtma miqdori
                </label>
                <input 
                  type="number" 
                  id="maxOrderQty" 
                  name="pricing.maximumOrderQuantity" 
                  class="form-input" 
                  min="1"
                  value="<%= product.pricing?.maximumOrderQuantity || '' %>"
                  placeholder="10000"
                >
                <div class="form-hint">Bo'sh qoldirish - cheklovsiz</div>
              </div>
            </div>
            
            <!-- Bulk Pricing Section -->
            <div class="bulk-pricing-section">
              <div class="section-header">
                <h4>
                  <i class="fas fa-layer-group"></i>
                  Ulgurji narxlari
                </h4>
                <button type="button" class="btn-sm btn-outline" id="addBulkPrice">
                  <i class="fas fa-plus"></i>
                  Qo'shish
                </button>
              </div>
              
              <div class="bulk-pricing-list" id="bulkPricingList">
                <% if (product.pricing && product.pricing.bulkPricing && product.pricing.bulkPricing.length > 0) { %>
                  <% product.pricing.bulkPricing.forEach(function(bulk, index) { %>
                    <div class="bulk-price-item" data-index="<%= index %>">
                      <div class="bulk-inputs">
                        <input 
                          type="number" 
                          name="pricing.bulkPricing[<%= index %>].minQuantity" 
                          placeholder="Min miqdor"
                          value="<%= bulk.minQuantity %>"
                          class="form-input small"
                        >
                        <span>-</span>
                        <input 
                          type="number" 
                          name="pricing.bulkPricing[<%= index %>].maxQuantity" 
                          placeholder="Max miqdor"
                          value="<%= bulk.maxQuantity || '' %>"
                          class="form-input small"
                        >
                        <input 
                          type="number" 
                          name="pricing.bulkPricing[<%= index %>].price" 
                          placeholder="Narx (USD)"
                          value="<%= bulk.price %>"
                          step="0.01"
                          class="form-input small"
                        >
                        <input 
                          type="number" 
                          name="pricing.bulkPricing[<%= index %>].discount" 
                          placeholder="Chegirma %"
                          value="<%= bulk.discount || '' %>"
                          class="form-input small"
                        >
                      </div>
                      <button type="button" class="btn-sm btn-ghost remove-bulk-price">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Step 3: Technical Specifications -->
          <div class="form-step" data-step="3">
            <div class="step-header">
              <h3>Texnik xususiyatlar</h3>
              <p class="step-description">Mahsulot parametrlari va texnik ko'rsatkichlar</p>
            </div>
            
            <div class="specifications-section">
              <div class="section-header">
                <h4>
                  <i class="fas fa-cogs"></i>
                  Mahsulot spetsifikatsiyalari
                </h4>
                <button type="button" class="btn-sm btn-outline" id="addSpecification">
                  <i class="fas fa-plus"></i>
                  Qo'shish
                </button>
              </div>
              
              <div class="specifications-list" id="specificationsList">
                <% if (product.specifications && product.specifications.length > 0) { %>
                  <% product.specifications.forEach(function(spec, index) { %>
                    <div class="specification-item" data-index="<%= index %>">
                      <div class="spec-inputs">
                        <input 
                          type="text" 
                          name="specifications[<%= index %>].name" 
                          placeholder="Xususiyat nomi (Masalan: Material)"
                          value="<%= spec.name %>"
                          class="form-input"
                        >
                        <input 
                          type="text" 
                          name="specifications[<%= index %>].value" 
                          placeholder="Qiymati (Masalan: 100% Paxta)"
                          value="<%= spec.value %>"
                          class="form-input"
                        >
                        <input 
                          type="text" 
                          name="specifications[<%= index %>].unit" 
                          placeholder="O'lchov (Masalan: %, kg, m)"
                          value="<%= spec.unit || '' %>"
                          class="form-input small"
                        >
                      </div>
                      <button type="button" class="btn-sm btn-ghost remove-specification">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </div>
            
            <!-- Inventory Section -->
            <div class="inventory-section">
              <div class="section-header">
                <h4>
                  <i class="fas fa-warehouse"></i>
                  Ombor ma'lumotlari
                </h4>
              </div>
              
              <div class="form-grid">
                <div class="form-group">
                  <label for="stockQuantity" class="form-label">
                    <i class="fas fa-boxes"></i>
                    Mavjud miqdor
                  </label>
                  <input 
                    type="number" 
                    id="stockQuantity" 
                    name="inventory.totalStock" 
                    class="form-input" 
                    min="0"
                    value="<%= product.inventory?.totalStock || '' %>"
                    placeholder="1000"
                  >
                </div>
                
                <div class="form-group">
                  <label for="lowStockThreshold" class="form-label">
                    <i class="fas fa-exclamation-triangle"></i>
                    Kam qolgan chegara
                  </label>
                  <input 
                    type="number" 
                    id="lowStockThreshold" 
                    name="inventory.lowStockThreshold" 
                    class="form-input" 
                    min="0"
                    value="<%= product.inventory?.lowStockThreshold || '' %>"
                    placeholder="100"
                  >
                  <div class="form-hint">Bu miqdordan kam qolganda ogohlantirish</div>
                </div>
                
                <div class="form-group">
                  <label for="inventoryUnit" class="form-label">
                    <i class="fas fa-ruler"></i>
                    O'lchov birligi
                  </label>
                  <select 
                    id="inventoryUnit" 
                    name="inventory.unit" 
                    class="form-select"
                  >
                    <option value="pieces" <%= (product.inventory?.unit === 'pieces') ? 'selected' : '' %>>Dona (pieces)</option>
                    <option value="kg" <%= (product.inventory?.unit === 'kg') ? 'selected' : '' %>>Kilogram (kg)</option>
                    <option value="meters" <%= (product.inventory?.unit === 'meters') ? 'selected' : '' %>>Metr (m)</option>
                    <option value="liters" <%= (product.inventory?.unit === 'liters') ? 'selected' : '' %>>Litr (l)</option>
                    <option value="boxes" <%= (product.inventory?.unit === 'boxes') ? 'selected' : '' %>>Quti (boxes)</option>
                    <option value="rolls" <%= (product.inventory?.unit === 'rolls') ? 'selected' : '' %>>Rulon (rolls)</option>
                  </select>
                  <div class="form-hint">Mahsulot qanday o'lchov birligida hisoblanadi</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 4: Images -->
          <div class="form-step" data-step="4">
            <div class="step-header">
              <h3>Mahsulot rasmlari</h3>
              <p class="step-description">Yuqori sifatli rasmlar mahsulot sotuvini oshiradi</p>
            </div>
            
            <div class="image-upload-section">
              <!-- Image Counter -->
              <div class="image-counter-section">
                <div class="image-counter">0/10 rasm</div>
                <div class="image-status-info">
                  <span class="temp-images-count">Yangi: 0</span>
                  <span class="existing-images-count">Mavjud: 0</span>
                </div>
              </div>
              
              <!-- Image Upload Area -->
              <div class="upload-area" id="imageUploadArea">
                <div class="upload-placeholder">
                  <i class="fas fa-cloud-upload-alt upload-icon"></i>
                  <h4>Rasmlarni yuklash</h4>
                  <p>Rasmlarni bu yerga sudrab oling yoki fayllarni tanlash uchun bosing</p>
                  <p class="upload-requirements">
                    Maksimal 10 ta rasm • JPG, PNG, WebP • Har biri 5MB gacha
                  </p>
                  <p class="upload-note">
                    <i class="fas fa-info-circle"></i>
                    Rasmlar vaqtincha saqlanadi. Product saqlangandagina server'ga yuklanadi.
                  </p>
                  <button type="button" class="btn-outline upload-btn">
                    <i class="fas fa-folder-open"></i>
                    Fayllarni tanlash
                  </button>
                </div>
                <input 
                  type="file" 
                  id="imageUploadInput" 
                  multiple 
                  accept="image/jpeg,image/png,image/webp,image/jpg"
                  style="display: none;"
                >
              </div>
              
              <!-- Current Images -->
              <div class="current-images" id="currentImages">
                <% if (product.images && product.images.length > 0) { %>
                  <div class="images-grid">
                    <% product.images.forEach(function(image, index) { %>
                      <% const imageUrl = (typeof image === 'string') ? image : image.url; %>
                      <% const isPrimary = (typeof image === 'object' && image.isPrimary) || index === 0; %>
                      <div class="image-item" data-image-url="<%= imageUrl %>">
                        <div class="image-wrapper">
                          <img src="<%= imageUrl %>" alt="<%= (typeof image === 'object' && image.alt) ? image.alt : 'Product Image ' + (index + 1) %>" loading="lazy">
                          <div class="image-overlay">
                            <button type="button" class="btn-sm btn-ghost set-primary" title="Asosiy qilish">
                              <i class="fas fa-star"></i>
                            </button>
                            <button type="button" class="btn-sm btn-ghost remove-image" title="O'chirish">
                              <i class="fas fa-trash"></i>
                            </button>
                          </div>
                          <% if (isPrimary) { %>
                            <div class="primary-badge">Asosiy</div>
                          <% } %>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                <% } %>
              </div>
              
              <!-- Upload Progress -->
              <div class="upload-progress" id="uploadProgress" style="display: none;">
                <div class="progress-info">
                  <span class="progress-text">Yuklanmoqda...</span>
                  <span class="progress-percentage">0%</span>
                </div>
                <div class="progress-bar">
                  <div class="progress-fill"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Step 5: Shipping & Delivery -->
          <div class="form-step" data-step="5">
            <div class="step-header">
              <h3>Yetkazib berish</h3>
              <p class="step-description">Yetkazib berish parametrlari va muddatlar</p>
            </div>
            
            <div class="form-grid">
              <div class="form-group">
                <label for="leadTime" class="form-label">
                  <i class="fas fa-clock"></i>
                  Tayyorlash muddati
                </label>
                <select id="leadTime" name="shipping.leadTime" class="form-select">
                  <% 
                    let currentLeadTime = '3-7'; // Default value
                    if (product.shipping && product.shipping.leadTime && typeof product.shipping.leadTime === 'object') {
                      const lt = product.shipping.leadTime;
                      if (lt.min === 1 && lt.max === 3) currentLeadTime = '1-3';
                      else if (lt.min === 3 && lt.max === 7) currentLeadTime = '3-7';
                      else if (lt.min === 7 && lt.max === 15) currentLeadTime = '7-15';
                      else if (lt.min === 15 && lt.max === 30) currentLeadTime = '15-30';
                      else currentLeadTime = 'custom';
                    } else if (typeof product.shipping?.leadTime === 'string') {
                      currentLeadTime = product.shipping.leadTime;
                    }
                  %>
                  <option value="1-3" <%= (currentLeadTime === '1-3') ? 'selected' : '' %>>1-3 kun</option>
                  <option value="3-7" <%= (currentLeadTime === '3-7') ? 'selected' : '' %>>3-7 kun</option>
                  <option value="7-15" <%= (currentLeadTime === '7-15') ? 'selected' : '' %>>7-15 kun</option>
                  <option value="15-30" <%= (currentLeadTime === '15-30') ? 'selected' : '' %>>15-30 kun</option>
                  <option value="custom" <%= (currentLeadTime === 'custom') ? 'selected' : '' %>>Kelishiladi</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="shippingWeight" class="form-label">
                  <i class="fas fa-weight"></i>
                  Og'irligi (kg)
                </label>
                <input 
                  type="number" 
                  id="shippingWeight" 
                  name="shipping.weight" 
                  class="form-input" 
                  step="0.1" 
                  min="0"
                  value="<%= product.shipping?.weight || '' %>"
                  placeholder="1.5"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-cube"></i>
                  O'lchamlar
                </label>
                <div class="dimensions-inputs">
                  <input 
                    type="number" 
                    name="shipping.dimensions.length" 
                    class="form-input small" 
                    placeholder="Uzunlik"
                    value="<%= product.shipping?.dimensions?.length || '' %>"
                  >
                  <span>×</span>
                  <input 
                    type="number" 
                    name="shipping.dimensions.width" 
                    class="form-input small" 
                    placeholder="Kenglik"
                    value="<%= product.shipping?.dimensions?.width || '' %>"
                  >
                  <span>×</span>
                  <input 
                    type="number" 
                    name="shipping.dimensions.height" 
                    class="form-input small" 
                    placeholder="Balandlik"
                    value="<%= product.shipping?.dimensions?.height || '' %>"
                  >
                  <select 
                    name="shipping.dimensions.unit" 
                    class="form-select small"
                    style="max-width: 70px; margin-left: 8px;"
                  >
                    <option value="cm" <%= (product.shipping?.dimensions?.unit === 'cm' || !product.shipping?.dimensions?.unit) ? 'selected' : '' %>>cm</option>
                    <option value="inch" <%= (product.shipping?.dimensions?.unit === 'inch') ? 'selected' : '' %>>inch</option>
                  </select>
                </div>
              </div>
              
              <!-- PROFESSIONAL FIX: Adding missing packagingType field -->
              <div class="form-group">
                <label for="packagingType" class="form-label">
                  <i class="fas fa-box"></i>
                  Qadoqlash turi
                </label>
                <select id="packagingType" name="shipping.packagingType" class="form-select">
                  <option value="">Tanlang...</option>
                  <option value="Box" <%= (product.shipping?.packagingType === 'Box') ? 'selected' : '' %>>Quti</option>
                  <option value="Bag" <%= (product.shipping?.packagingType === 'Bag') ? 'selected' : '' %>>Xalta</option>
                  <option value="Carton" <%= (product.shipping?.packagingType === 'Carton') ? 'selected' : '' %>>Karton</option>
                  <option value="Pallet" <%= (product.shipping?.packagingType === 'Pallet') ? 'selected' : '' %>>Pallet</option>
