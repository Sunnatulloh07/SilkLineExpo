    /**
     * PROFESSIONAL Image Files Handler - Base64 Temporary Storage
     * No immediate upload - files converted to base64 and stored temporarily
     */
    async handleImageFilesAdvanced(files) {
        console.log('🎯 Processing image files with advanced handler...');
        
        const maxFiles = 10;
        const maxSize = 5 * 1024 * 1024; // 5MB
        const allowedTypes = ['image/jpeg', 'image/png', 'image/webp', 'image/jpg'];

        // Validate files
        const validFiles = Array.from(files).filter(file => {
            if (!allowedTypes.includes(file.type)) {
                this.showErrorToast(`Noto'g'ri fayl turi: ${file.name}`);
                return false;
            }
            if (file.size > maxSize) {
                this.showErrorToast(`Fayl juda katta: ${file.name} (${(file.size / 1024 / 1024).toFixed(1)}MB)`);
                return false;
            }
            return true;
        });

        if (validFiles.length === 0) return;

        // Check total image count
        const currentTotalImages = this.temporaryImages.length + this.existingImages.length;
        if (currentTotalImages + validFiles.length > maxFiles) {
            this.showErrorToast(`Maksimal ${maxFiles} ta rasm yuklash mumkin. Hozir ${currentTotalImages} ta mavjud.`);
            return;
        }

        try {
            this.showProcessingState(true, 'Rasmlar qayta ishlanmoqda...');
            
            // Convert files to base64 and add to temporary storage
            for (const file of validFiles) {
                await this.addImageToTemporaryStorage(file);
            }
            
            // Refresh UI
            this.refreshImageGrid();
            this.showProcessingState(false);
            this.showSuccessToast(`${validFiles.length} ta rasm qo'shildi`);
            
            this.isDirty = true;
            
        } catch (error) {
            console.error('❌ Image processing error:', error);
            this.showProcessingState(false);
            this.showErrorToast('Rasmlarni qayta ishfashda xatolik: ' + error.message);
        }
    }

