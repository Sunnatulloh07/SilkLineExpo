        this.logger = console;
    }

    init() {
        try {
            this.modal = document.getElementById('productDetailsModal');
            this.modalBody = document.getElementById('modalBody');
            
            if (!this.modal || !this.modalBody) {
                this.logger.error('❌ Modal elements not found');
                return false;
            }
            
            this.setupEventListeners();
            this.isInitialized = true;
            this.logger.log('✅ Product Modal Manager initialized');
            return true;
            
        } catch (error) {
            this.logger.error('❌ Modal manager initialization error:', error);
            return false;
        }
    }

    setupEventListeners() {
        // Close modal button
        const closeBtn = document.getElementById('closeModal');
        if (closeBtn) {
            closeBtn.addEventListener('click', () => this.closeModal());
        }

        // Close modal on overlay click
        this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
                this.closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && this.modal.classList.contains('active')) {
                this.closeModal();
            }
        });

        // Preview button functionality
        const previewBtn = document.getElementById('previewBtn');
        if (previewBtn) {
