        setupProgressTracking() {
            // Initialize progress tracking system
            this.initializeProgressSystem();
            
            // Real-time progress monitoring
            this.startProgressMonitoring();
            
            // Event-based progress updates
            this.setupProgressEventListeners();
            
            // Initial progress calculation
            this.updateStepProgress();
        }
        
        /**
         * Initialize professional progress tracking system
         */
        initializeProgressSystem() {
            this.progressData = {
                steps: {
                    1: { completion: 0, fields: [], required: ['name', 'category', 'description'] },
                    2: { completion: 0, fields: [], required: ['pricing.basePrice', 'pricing.minimumOrderQuantity'] },
                    3: { completion: 0, fields: [], required: ['inventory.unit'] },
                    4: { completion: 0, fields: [], required: [] },
                    5: { completion: 0, fields: [], required: ['shipping.leadTime'] }
                },
                overall: 0,
                lastUpdated: Date.now()
            };
            
            // Define field mappings for each step
            this.stepFieldMappings = {
                1: ['name', 'category', 'description', 'brand', 'sku'],
                2: ['pricing.basePrice', 'pricing.minimumOrderQuantity'],
                3: ['inventory.unit', 'inventory.totalStock'],
                4: ['images'], // Special handling for images
                5: ['shipping.leadTime', 'shipping.methods']
            };
        }
        
        /**
         * Start real-time progress monitoring
         */
        startProgressMonitoring() {
            // Update progress every 2 seconds
            this.progressInterval = setInterval(() => {
                this.updateStepProgress();
            }, 2000);
            
            // Progress tracking interval (no storage needed)
            this.saveInterval = setInterval(() => {
                // Progress tracking without storage
            }, 10000);
        }
        
        /**
         * Setup event listeners for progress tracking
         */
        setupProgressEventListeners() {
            // Unified form change handler to avoid duplicates
            const form = document.getElementById('productAddForm');
            if (form) {
                form.addEventListener('input', (e) => {
                    if (e.target.matches('input, select, textarea')) {
                        this.debounceProgressUpdate();
                    }
                });
                
                form.addEventListener('change', (e) => {
                    if (e.target.matches('input, select, textarea')) {
                        this.debounceProgressUpdate();
                    }
                });
            }
            
            // Image upload/remove events
            document.addEventListener('imageUploaded', () => {
                this.updateStepProgress();
            });
            
            document.addEventListener('imageRemoved', () => {
                this.updateStepProgress();
            });
            
            // Bulk pricing changes
            document.addEventListener('bulkPricingChanged', () => {
                this.updateStepProgress();
            });
            
            // Specifications changes
            document.addEventListener('specificationsChanged', () => {
                this.updateStepProgress();
            });
        }
        
        /**
         * Debounced progress update for performance
         */
        debounceProgressUpdate() {
            clearTimeout(this.progressDebounce);
            this.progressDebounce = setTimeout(() => {
                this.updateStepProgress();
            }, 300);
        }
    
        updateStepProgress() {
            try {
                // Calculate progress for each step with professional logic
                const stepProgresses = {};
                
                // Step 1: Asosiy ma'lumotlar (Basic Information)
                stepProgresses[1] = this.calculateStep1Progress();
                this.updateProgressItem(1, stepProgresses[1]);
                
                // Step 2: Narx va miqdor (Pricing & Quantity)
                stepProgresses[2] = this.calculateStep2Progress();
                this.updateProgressItem(2, stepProgresses[2]);
                
                // Step 3: Texnik xususiyatlar (Specifications)
                stepProgresses[3] = this.calculateStep3Progress();
                this.updateProgressItem(3, stepProgresses[3]);
                
                // Step 4: Rasmlar (Images)
                stepProgresses[4] = this.calculateStep4Progress();
                this.updateProgressItem(4, stepProgresses[4]);
                
                // Step 5: Yetkazib berish (Shipping)
                stepProgresses[5] = this.calculateStep5Progress();
                this.updateProgressItem(5, stepProgresses[5]);
                
                // Calculate overall progress with professional weighting
                const overallProgress = this.calculateOverallProgress(stepProgresses);
                
                // Update progress data
                this.progressData.steps = stepProgresses;
                this.progressData.overall = overallProgress;
                this.progressData.lastUpdated = Date.now();
                
                // Update UI elements
                this.updateOverallProgress(overallProgress);
                this.updateProgressBar(overallProgress);
                this.updateCompletionStatus(overallProgress);
                
                // Update step tabs (only for completion status, not progress %)
                this.updateStepTabs(stepProgresses);
                
                // Update step progress tracking
                this.stepProgress = stepProgresses;
                
                // Show readiness notifications
                this.checkReadinessNotifications(overallProgress);
                
            } catch (error) {
                // Handle progress calculation errors gracefully
            }
        }
        
        /**
         * Update step tabs - only show completion status, not progress %
         */
        updateStepTabs(stepProgresses) {
            try {
                for (let stepNum = 1; stepNum <= 5; stepNum++) {
                    const stepElement = document.querySelector(`[data-step="${stepNum}"]`);
                    if (!stepElement) continue;
                    
                    const stepNumber = stepElement.querySelector('.step-number');
                    const progress = stepProgresses[stepNum] || 0;
                    
                    if (stepNumber) {
                        // Only show completion status, not progress %
                        if (progress === 100) {
                            stepNumber.textContent = '✓';
                            stepNumber.classList.add('completed');
                            stepElement.classList.add('completed');
                        } else {
                            stepNumber.textContent = stepNum;
                            stepNumber.classList.remove('completed');
                            stepElement.classList.remove('completed');
                        }
                    }
                }
            } catch (error) {
                // Handle step tabs update errors gracefully
            }
        }
        
        /**
         * Calculate Step 1 Progress: Asosiy ma'lumotlar (Basic Information)
         */
        calculateStep1Progress() {
            const fields = [
                { name: 'name', required: true, weight: 0.25 },
                { name: 'category', required: true, weight: 0.25 },
                { name: 'description', required: true, weight: 0.25 },
                { name: 'status', required: true, weight: 0.15 },
                { name: 'brand', required: false, weight: 0.05 },
                { name: 'sku', required: false, weight: 0.05 }
            ];
            
            let totalWeight = 0;
            let completedWeight = 0;
            
            fields.forEach(field => {
                const element = document.querySelector(`[name="${field.name}"]`) || 
                               document.getElementById(field.name);
                
                if (element) {
                    const hasValue = element.value && element.value.trim().length > 0;
                    let isValid = false;
                    
                    if (field.name === 'status') {
                        // For status field, any selection (including default) counts as valid
