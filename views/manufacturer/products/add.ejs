            const errors = [];
            
            // Only check essential fields for draft
            if (!formData.name || formData.name.trim().length < 3) {
                errors.push(window.t?.('manufacturer.products.add.validation.draftProductNameLength') || 'Mahsulot nomi kamida 3 ta belgi bo\'lishi kerak');
            }
            
            if (!formData.description || formData.description.trim().length < 10) {
                errors.push(window.t?.('manufacturer.products.add.validation.draftDescriptionLength') || 'Mahsulot tavsifi kamida 10 ta belgi bo\'lishi kerak');
            }
            
            if (!formData.category) {
                errors.push(window.t?.('manufacturer.products.add.validation.draftCategoryRequired') || 'Kategoriya tanlash majburiy');
            }
            
            return errors;
        }
        
        async publishProduct() {
            try {
                
                const publishBtn = document.getElementById('publishBtn');
                this.setButtonLoading(publishBtn, window.t?.('manufacturer.products.add.loading.publishing') || 'Chop etilmoqda...');
                
                const formData = this.collectFormData();
                
                // Validate form before publishing
                const validationResult = this.validateFormForPublishing(formData);
                
                if (!validationResult.isValid) {
                    this.showValidationErrors(validationResult.errors);
                    return;
                }
                
                formData.status = 'active';
                
                const response = await fetch(productAddData.apiEndpoints.publishProduct, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    this.isDirty = false;
                    this.showPublishSuccessMessage(result.data);
                } else {
                    // Handle backend validation errors
                    if (result.errors && Array.isArray(result.errors)) {
                        this.showErrorToast(`${window.t?.('manufacturer.products.add.errors.backendValidation') || 'Backend validation'}: ${result.errors.join(', ')}`);
                    } else {
                        this.showErrorToast(result.message || window.t?.('manufacturer.products.add.errors.publishFailed') || 'Chop etishda xatolik yuz berdi');
                    }
                }
                
            } catch (error) {
                // Handle network or parsing errors
                this.showErrorToast(`${window.t?.('manufacturer.products.add.errors.networkError') || 'Network error'}: ${error.message}`);
            } finally {
                const publishBtn = document.getElementById('publishBtn');
                this.resetButtonLoading(publishBtn, `<i class="fas fa-rocket"></i> ${window.t?.('manufacturer.products.add.actions.publish') || 'Chop etish'}`);
            }
        }
        
        validateFormForPublishing(formData) {
            const errors = [];
            
            // Required field validations
            if (!formData.name || formData.name.trim().length < 3) {
                errors.push(window.t?.('manufacturer.products.add.validation.productNameLength') || 'Mahsulot nomi kamida 3 ta belgi bo\'lishi kerak');
            }
            
            if (!formData.description || formData.description.trim().length < 20) {
                errors.push(window.t?.('manufacturer.products.add.validation.descriptionLength') || 'Tavsif kamida 20 ta belgi bo\'lishi kerak');
            }
            
            if (!formData.category) {
                errors.push(window.t?.('manufacturer.products.add.validation.categoryRequired') || 'Kategoriya tanlanishi kerak');
            }
            
            if (!formData.pricing?.basePrice || formData.pricing.basePrice <= 0) {
                errors.push(window.t?.('manufacturer.products.add.validation.basePriceRequired') || 'Asosiy narx ko\'rsatilishi kerak');
            }
            
            if (!formData.pricing?.minimumOrderQuantity || formData.pricing.minimumOrderQuantity <= 0) {
                errors.push(window.t?.('manufacturer.products.add.validation.minOrderQtyRequired') || 'Minimal buyurtma miqdori ko\'rsatilishi kerak');
            }
            
            if (!formData.inventory?.totalStock || formData.inventory.totalStock <= 0) {
                errors.push(window.t?.('manufacturer.products.add.validation.stockQuantityRequired') || 'Inventar miqdori ko\'rsatilishi kerak');
            }
            
            if (!formData.inventory?.unit) {
                errors.push(window.t?.('manufacturer.products.add.validation.unitRequired') || 'O\'lchov birligi tanlanishi kerak');
            }
            
            // Check for uploaded images
            const hasImages = (formData.images && formData.images.length > 0) || 
                             (document.querySelectorAll('.image-preview-item').length > 0);
            
            if (!hasImages) {
                errors.push(window.t?.('manufacturer.products.add.validation.imageRequired') || 'Kamida 1 ta rasm yuklanishi kerak');
            }
            
            return {
                isValid: errors.length === 0,
                errors: errors
            };
        }
        
        showValidationErrors(errors) {
            const errorsList = errors.map(error => `<li>${error}</li>`).join('');
            
            const errorHtml = `
