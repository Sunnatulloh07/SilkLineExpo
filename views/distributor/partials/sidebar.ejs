          <span class="stat-value" id="sidebarTotalOrders">247</span>
        </div>
        <div class="stat-item">
          <span class="stat-label"><%- t('buyerDashboard.sidebar.thisMonth') %></span>
          <span class="stat-value" id="sidebarMonthlyOrders">18</span>
        </div>
        <div class="stat-item">
          <span class="stat-label"><%- t('buyerDashboard.sidebar.activeSuppliers') %></span>
          <span class="stat-value" id="sidebarActiveSuppliers">23</span>
        </div>
      </div>
    </div>

  </div>
</aside>

<style>
/* Buyer Sidebar Specific Styles */
.buyer-sidebar {
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  border-right: 1px solid #e2e8f0;
}

[data-theme="dark"] .buyer-sidebar {
  background: linear-gradient(180deg, var(--bg-card) 0%, var(--bg-elevated) 100%);
  border-right-color: var(--border-color);
}

.buyer-logo {
  background: var(--buyer-gradient);
  color: white;
}

.sidebar-footer {
  padding: 1.5rem;
  border-top: 1px solid #e2e8f0;
  margin-top: auto;
}

[data-theme="dark"] .sidebar-footer {
  border-top-color: var(--border-color);
}

.quick-stats {
  background: var(--buyer-card-gradient);
  border-radius: 12px;
  padding: 1rem;
}

.stats-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--buyer-primary);
  margin: 0 0 0.75rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 0;
}

.stat-item:not(:last-child) {
  border-bottom: 1px solid rgba(6, 182, 212, 0.1);
}

.stat-label {
  font-size: 0.75rem;
  color: #64748b;
}

.stat-value {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--buyer-primary);
}

/* Buyer-specific nav item colors */
.buyer-sidebar .nav-item:hover {
  background: rgba(6, 182, 212, 0.1);
  color: var(--buyer-primary);
}

.buyer-sidebar .nav-item.active {
  background: rgba(6, 182, 212, 0.15);
  color: var(--buyer-primary);
  border-left: 3px solid var(--buyer-primary);
}

.buyer-sidebar .nav-item.logout-item:hover {
  background: rgba(239, 68, 68, 0.1);
  color: var(--buyer-danger);
}

/* Badge colors for buyer sidebar */
.buyer-sidebar .nav-badge.badge-primary {
  background: var(--buyer-primary);
}

.buyer-sidebar .nav-badge.badge-warning {
  background: var(--buyer-warning);
}

.buyer-sidebar .nav-badge.badge-success {
  background: var(--buyer-success);
}

.buyer-sidebar .nav-badge.badge-danger {
  background: var(--buyer-danger);
}

/* Responsive behavior */
@media (max-width: 768px) {
  .sidebar-footer {
    display: none;
  }
}

/* Dark theme adjustments */
[data-theme="dark"] .stats-title {
  color: var(--buyer-accent);
}

[data-theme="dark"] .stat-label {
  color: var(--text-secondary);
}

[data-theme="dark"] .stat-value {
  color: var(--buyer-accent);
}

[data-theme="dark"] .quick-stats {
  background: rgba(6, 182, 212, 0.1);
}
</style>

