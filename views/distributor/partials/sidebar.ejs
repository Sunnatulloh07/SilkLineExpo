        </a>

        <a href="/distributor/settings" class="nav-item <%= currentPage === 'settings' ? 'active' : '' %>" data-tooltip="<%- t('buyerDashboard.sidebar.settings') %>">
          <i class="fas fa-cog nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.settings') %></span>
        </a>

        <a href="/distributor/support" class="nav-item <%= currentPage === 'support' ? 'active' : '' %>" data-tooltip="<%- t('buyerDashboard.sidebar.support') %>">
          <i class="fas fa-headset nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.support') %></span>
        </a>

        <a href="/auth/logout" class="nav-item logout-item" data-tooltip="<%- t('buyerDashboard.sidebar.logout') %>">
          <i class="fas fa-sign-out-alt nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.logout') %></span>
        </a>
      </div>

    </nav>

    <!-- Quick Stats Footer -->
    <div class="sidebar-footer">
