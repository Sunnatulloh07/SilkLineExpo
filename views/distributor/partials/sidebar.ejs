          <i class="fas fa-plus-circle nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.newInquiry') %></span>
        </a>
      </div>

      <!-- Suppliers Section -->
      <div class="nav-section">
        <div class="nav-section-title"><%- t('buyerDashboard.sidebar.suppliers') %></div>

        <a href="/distributor/suppliers" class="nav-item <%= currentPage === 'suppliers' ? 'active' : '' %>" data-tooltip="<%- t('buyerDashboard.sidebar.mySuppliers') %>">
