          <i class="fas fa-star nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.favoriteSuppliers') %></span>
        </a>
      </div>

      <!-- Business Intelligence -->
      <div class="nav-section">
        <div class="nav-section-title"><%- t('buyerDashboard.sidebar.business') %></div>

        <a href="/distributor/analytics" class="nav-item <%= currentPage === 'analytics' ? 'active' : '' %>" data-tooltip="<%- t('buyerDashboard.sidebar.analytics') %>">
          <i class="fas fa-chart-bar nav-icon"></i>
          <span class="nav-text"><%- t('buyerDashboard.sidebar.analytics') %></span>
