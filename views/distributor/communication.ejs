<%- include('./partials/header', { title: 'Communication Center - Buyer Profile', lng: lng, user: user }) %>
<%- include('./partials/sidebar', { user: user, currentPage: 'communication' }) %>

<!-- Main Content -->
<main class="admin-main">
  <div class="admin-content">
    
    <!-- Page Header -->
    <div class="page-header animate-fade-in">
      <div class="page-header-content">
        <div>
          <h1 class="page-title">Communication Center</h1>
          <p class="page-description">Manage conversations with suppliers and track RFQ responses</p>
        </div>
        <div class="page-actions">
          <button class="btn btn-primary" onclick="startNewConversation()">
            <i class="fas fa-plus"></i>
            New Message
          </button>
          <button class="btn btn-secondary" onclick="createRFQ()">
            <i class="fas fa-file-alt"></i>
            Create RFQ
          </button>
        </div>
      </div>
    </div>
    
    <!-- Communication Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-lg mb-lg">
      
      <!-- Active Conversations -->
      <div class="stat-card animate-fade-in">
        <div class="stat-header">
          <h3 class="stat-title">Active Chats</h3>
          <div class="stat-icon">
            <i class="fas fa-comments"></i>
          </div>
        </div>
        <div class="stat-value">
          <span class="kpi-value" id="activeChatsValue"><%= communicationStats.activeChats || 0 %></span>
        </div>
        <div class="stat-change">
          <span class="kpi-trend"><%= communicationStats.unreadMessages || 0 %> unread messages</span>
        </div>
      </div>
      
      <!-- Pending RFQs -->
      <div class="stat-card warning animate-fade-in">
        <div class="stat-header">
          <h3 class="stat-title">Pending RFQs</h3>
          <div class="stat-icon warning">
            <i class="fas fa-clipboard-list"></i>
          </div>
        </div>
        <div class="stat-value">
          <span class="kpi-value" id="pendingRFQsValue"><%= communicationStats.pendingRFQs || 0 %></span>
        </div>
        <div class="stat-change">
          <span class="kpi-trend">Awaiting responses</span>
        </div>
      </div>
      
      <!-- Response Rate -->
      <div class="stat-card success animate-fade-in">
        <div class="stat-header">
          <h3 class="stat-title">Response Rate</h3>
          <div class="stat-icon success">
            <i class="fas fa-reply"></i>
          </div>
        </div>
        <div class="stat-value">
          <span class="kpi-value" id="responseRateValue"><%= communicationStats.responseRate || 0 %>%</span>
        </div>
        <div class="stat-change positive">
          <span class="kpi-trend">+5% improvement</span>
        </div>
      </div>
      
      <!-- Avg Response Time -->
      <div class="stat-card info animate-fade-in">
        <div class="stat-header">
          <h3 class="stat-title">Avg Response</h3>
          <div class="stat-icon info">
            <i class="fas fa-clock"></i>
          </div>
        </div>
        <div class="stat-value">
          <span class="kpi-value" id="avgResponseValue"><%= communicationStats.avgResponseTime || '0h' %></span>
        </div>
        <div class="stat-change positive">
          <span class="kpi-trend">Faster than average</span>
        </div>
      </div>
      
    </div>
    
    <!-- Communication Layout -->
    <div class="communication-layout">
      
      <!-- Conversations List -->
      <div class="conversations-panel">
        <div class="conversations-header">
          <div class="panel-title">
            <h3>Conversations</h3>
            <span class="conversation-count" id="conversationCount">18</span>
          </div>
          <div class="conversation-filters">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="unread">Unread</button>
            <button class="filter-btn" data-filter="rfq">RFQs</button>
          </div>
        </div>
        
        <div class="conversation-search">
          <div class="search-input-group">
            <i class="fas fa-search"></i>
            <input type="text" id="conversationSearch" placeholder="Search conversations...">
          </div>
        </div>
        
        <div class="conversations-list" id="conversationsList">
          <!-- Conversations will be loaded dynamically -->
          <div class="loading-placeholder">
            <div class="loading-spinner"></div>
            <p>Loading conversations...</p>
          </div>
        </div>
      </div>
      
      <!-- Chat Area -->
      <div class="chat-panel">
        <div id="emptyChatState" class="empty-chat-state">
          <div class="empty-state-icon">
            <i class="fas fa-comments"></i>
          </div>
          <h3>Select a conversation</h3>
          <p>Choose a conversation from the left to start messaging</p>
        </div>
        
        <div id="chatArea" class="chat-area hidden">
          <!-- Chat Header -->
          <div class="chat-header">
            <div class="chat-header-info">
              <div class="supplier-avatar">
                <img id="chatSupplierAvatar" src="" alt="">
              </div>
              <div class="supplier-details">
                <h4 id="chatSupplierName">Supplier Name</h4>
                <span id="chatSupplierStatus" class="status-indicator">Online</span>
              </div>
            </div>
            <div class="chat-actions">
              <button class="btn-icon" onclick="viewSupplierProfile()" title="View Profile">
                <i class="fas fa-user"></i>
              </button>
              <button class="btn-icon" onclick="createOrderFromChat()" title="Create Order">
                <i class="fas fa-shopping-cart"></i>
              </button>
              <button class="btn-icon" onclick="archiveConversation()" title="Archive">
                <i class="fas fa-archive"></i>
              </button>
            </div>
          </div>
          
          <!-- Messages Container -->
          <div class="messages-container" id="messagesContainer">
            <!-- Messages will be loaded here -->
          </div>
          
          <!-- Message Input -->
          <div class="message-input-area">
            <div class="message-input-container">
              <button class="attachment-btn" onclick="attachFile()" title="Attach File">
                <i class="fas fa-paperclip"></i>
              </button>
              <div class="message-input-wrapper">
                <textarea 
                  id="messageInput" 
                  placeholder="Type your message..."
                  rows="1"
                  onkeydown="handleMessageKeyDown(event)"
                ></textarea>
                <button class="emoji-btn" onclick="toggleEmojiPicker()" title="Add Emoji">
                  <i class="fas fa-smile"></i>
                </button>
              </div>
              <button class="send-btn" onclick="sendMessage()" title="Send Message">
                <i class="fas fa-paper-plane"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <!-- RFQ Panel -->
      <div class="rfq-panel">
        <div class="rfq-header">
          <h3>Request for Quote (RFQ)</h3>
          <button class="btn btn-primary btn-sm" onclick="createNewRFQ()">
            <i class="fas fa-plus"></i>
            New RFQ
          </button>
        </div>
        
        <div class="rfq-list" id="rfqList">
          <!-- RFQs will be loaded dynamically -->
          <div class="loading-placeholder">
            <div class="loading-spinner"></div>
            <p>Loading RFQs...</p>
          </div>
        </div>
      </div>
      
    </div>
    
  </div>
</main>

<!-- RFQ Creation Modal -->
<div id="createRFQModal" class="modal hidden">
  <div class="modal-overlay"></div>
  <div class="modal-content modal-lg">
    <div class="modal-header">
      <h3 class="modal-title">Create Request for Quote</h3>
      <button class="modal-close" onclick="closeRFQModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body">
      <form id="createRFQForm">
        <div class="form-row">
          <div class="form-group">
            <label>RFQ Title</label>
            <input type="text" id="rfqTitle" required placeholder="Enter RFQ title">
          </div>
          <div class="form-group">
            <label>Category</label>
            <select id="rfqCategory" required>
              <option value="">Select Category</option>
              <option value="textiles">Textiles & Fabrics</option>
              <option value="electronics">Electronics</option>
              <option value="food">Food & Beverages</option>
              <option value="chemicals">Chemicals</option>
              <option value="machinery">Machinery</option>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label>Product Description</label>
          <textarea id="rfqDescription" rows="3" required placeholder="Detailed product description and specifications"></textarea>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label>Quantity</label>
            <input type="number" id="rfqQuantity" required placeholder="Required quantity">
          </div>
          <div class="form-group">
            <label>Unit</label>
            <input type="text" id="rfqUnit" required placeholder="e.g., pieces, kg, meters">
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label>Target Price (USD)</label>
            <input type="number" id="rfqTargetPrice" placeholder="Target price per unit">
          </div>
          <div class="form-group">
            <label>Delivery Deadline</label>
            <input type="date" id="rfqDeadline" required>
          </div>
        </div>
        
        <div class="form-group">
          <label>Additional Requirements</label>
          <textarea id="rfqRequirements" rows="2" placeholder="Certifications, quality standards, packaging requirements, etc."></textarea>
        </div>
        
        <div class="form-group">
          <label>Send to Suppliers</label>
          <div class="supplier-selection">
            <div class="select-all-option">
              <label class="checkbox-label">
                <input type="checkbox" id="selectAllSuppliers" onchange="toggleAllSuppliers()">
                <span>Send to all qualified suppliers</span>
              </label>
            </div>
            <div class="supplier-checkboxes" id="supplierCheckboxes">
              <!-- Supplier list will be populated dynamically -->
            </div>
          </div>
        </div>
        
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" onclick="closeRFQModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Send RFQ</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
/* Communication Layout */
.communication-layout {
  display: grid;
  grid-template-columns: 350px 1fr 300px;
  gap: 1.5rem;
  height: calc(100vh - 200px);
  min-height: 600px;
}

/* Conversations Panel */
.conversations-panel {
  background: var(--surface-color);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.conversations-header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.panel-title {
  display: flex;
  align-items: center;
  justify-content: between;
  margin-bottom: 1rem;
}

.panel-title h3 {
  margin: 0;
  flex: 1;
}

.conversation-count {
  background: var(--buyer-primary);
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
}

.conversation-filters {
  display: flex;
  gap: 0.5rem;
}

.filter-btn {
  padding: 0.5rem 1rem;
  border: 1px solid var(--border-color);
  background: transparent;
  color: var(--text-secondary);
  border-radius: 6px;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-btn.active,
.filter-btn:hover {
  background: var(--buyer-primary);
  color: white;
  border-color: var(--buyer-primary);
}

.conversation-search {
  padding: 0 1.5rem 1.5rem;
}

.conversations-list {
  flex: 1;
  overflow-y: auto;
}

.conversation-item {
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-light);
  cursor: pointer;
  transition: background 0.2s ease;
  position: relative;
}

.conversation-item:hover {
  background: var(--background-hover);
}

.conversation-item.active {
  background: var(--buyer-light);
  border-right: 3px solid var(--buyer-primary);
}

.conversation-item.unread::before {
  content: '';
  position: absolute;
  left: 0.5rem;
  top: 50%;
  transform: translateY(-50%);
  width: 8px;
  height: 8px;
  background: var(--buyer-primary);
  border-radius: 50%;
}

.conversation-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 0.5rem;
}

.conversation-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--buyer-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
}

.conversation-info {
  flex: 1;
  min-width: 0;
}

.conversation-name {
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 0.25rem 0;
  font-size: 0.95rem;
}

.conversation-time {
  color: var(--text-secondary);
  font-size: 0.8rem;
}

.conversation-preview {
  color: var(--text-secondary);
  font-size: 0.9rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conversation-badges {
  display: flex;
  gap: 0.25rem;
}

.badge {
  padding: 0.15rem 0.4rem;
  border-radius: 10px;
  font-size: 0.7rem;
  font-weight: 600;
}

.badge.rfq {
  background: var(--warning-light);
  color: var(--warning-color);
}

.badge.unread-count {
  background: var(--buyer-primary);
  color: white;
  min-width: 18px;
  text-align: center;
}

/* Chat Panel */
.chat-panel {
  background: var(--surface-color);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.empty-chat-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
}

.empty-state-icon {
  font-size: 4rem;
  color: var(--border-color);
  margin-bottom: 1rem;
}

.chat-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.chat-header {
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chat-header-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.supplier-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
}

.supplier-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.supplier-details h4 {
  margin: 0 0 0.25rem 0;
  color: var(--text-primary);
}

.status-indicator {
  font-size: 0.8rem;
  color: var(--success-color);
}

.status-indicator::before {
  content: '‚óè';
  margin-right: 0.25rem;
}

.chat-actions {
  display: flex;
  gap: 0.5rem;
}

.messages-container {
  flex: 1;
  padding: 1rem;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.message {
  display: flex;
  gap: 0.75rem;
  max-width: 70%;
}

.message.own {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--buyer-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 12px;
  flex-shrink: 0;
}

.message-content {
  flex: 1;
}

.message-bubble {
  background: var(--background-secondary);
  padding: 0.75rem 1rem;
  border-radius: 18px;
  margin-bottom: 0.25rem;
}

.message.own .message-bubble {
  background: var(--buyer-primary);
  color: white;
}

.message-time {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-left: 1rem;
}

.message.own .message-time {
  text-align: right;
  margin-left: 0;
  margin-right: 1rem;
}

/* Message Input */
.message-input-area {
  padding: 1rem 1.5rem;
  border-top: 1px solid var(--border-color);
}

.message-input-container {
  display: flex;
  align-items: flex-end;
  gap: 0.5rem;
  background: var(--background-secondary);
  border: 1px solid var(--border-color);
  border-radius: 24px;
  padding: 0.5rem;
}

.attachment-btn,
.emoji-btn,
.send-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: transparent;
  color: var(--text-secondary);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.send-btn {
  background: var(--buyer-primary);
  color: white;
}

.attachment-btn:hover,
.emoji-btn:hover {
  background: var(--background-hover);
  color: var(--text-primary);
}

.send-btn:hover {
  background: var(--buyer-secondary);
}

.message-input-wrapper {
  flex: 1;
  display: flex;
  align-items: flex-end;
  gap: 0.5rem;
}

#messageInput {
  flex: 1;
  border: none;
  background: transparent;
  resize: none;
  outline: none;
  font-family: inherit;
  font-size: 0.95rem;
  line-height: 1.4;
  max-height: 120px;
  padding: 0.5rem 0;
}

/* RFQ Panel */
.rfq-panel {
  background: var(--surface-color);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.rfq-header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.rfq-header h3 {
  margin: 0;
  font-size: 1.1rem;
}

.rfq-list {
  flex: 1;
  overflow-y: auto;
}

.rfq-item {
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-light);
  cursor: pointer;
  transition: background 0.2s ease;
}

.rfq-item:hover {
  background: var(--background-hover);
}

.rfq-title {
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 0.5rem 0;
  font-size: 0.9rem;
}

.rfq-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.rfq-status {
  padding: 0.2rem 0.6rem;
  border-radius: 12px;
  font-size: 0.7rem;
  font-weight: 600;
}

.rfq-status.pending {
  background: var(--warning-light);
  color: var(--warning-color);
}

.rfq-status.responded {
  background: var(--success-light);
  color: var(--success-color);
}

.rfq-responses {
  font-size: 0.8rem;
  color: var(--buyer-primary);
  font-weight: 600;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .communication-layout {
    grid-template-columns: 300px 1fr 250px;
  }
}

@media (max-width: 968px) {
  .communication-layout {
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr auto;
  }
  
  .conversations-panel,
  .rfq-panel {
    height: 200px;
  }
  
  .chat-panel {
    height: 400px;
  }
}

/* Supplier Selection in RFQ */
.supplier-selection {
  max-height: 200px;
  overflow-y: auto;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  padding: 1rem;
}

.select-all-option {
  padding-bottom: 1rem;
  margin-bottom: 1rem;
  border-bottom: 1px solid var(--border-light);
}

.supplier-checkboxes {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 6px;
  transition: background 0.2s ease;
}

.checkbox-label:hover {
  background: var(--background-hover);
}

.checkbox-label input[type="checkbox"] {
  margin: 0;
}
</style>

<script src="/js/buyer/communication.js"></script>

</body>
</html>