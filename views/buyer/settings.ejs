  background: #6b7280;
}

[data-theme='dark'] .toggle-switch input:checked ~ .toggle-switch,
[data-theme='dark'] .toggle-switch:has(input:checked) {
  background: #3b82f6 !important;
}

[data-theme='dark'] .toggle-slider {
