<!DOCTYPE html>
<html lang="<%= currentLang || 'uz' %>" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Login' %> - SLEX Platform</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/line-awesome.min.css" rel="stylesheet">
    <link href="/auth/css/auth-theme.css" rel="stylesheet">
    
    <!-- Security -->
    <meta name="csrf-token" content="<%= csrfToken %>">
    <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN">
    <meta http-equiv="X-XSS-Protection" content="1; mode=block">
</head>
<body class="auth-layout">
    <!-- Background Elements -->
    <div class="auth-background">
        <div class="bg-shape shape-1"></div>
        <div class="bg-shape shape-2"></div>
        <div class="bg-shape shape-3"></div>
        <div class="bg-particles" id="particles"></div>
    </div>

    <!-- Main Content -->
    <div class="auth-container">
        <!-- Header -->
        <header class="auth-header">
            <div class="auth-header-content">
                <!-- Logo -->
                <div class="auth-logo">
                    <img src="/assets/images/logo/logo.png" alt="SLEX" class="logo-img">
                    <span class="logo-text">SLEX</span>
                </div>

                <!-- Language Selector -->
                <div class="auth-language">
                    <div class="language-dropdown" id="languageDropdown">
                        <button class="language-btn" id="languageToggle">
                            <% 
                            const flags = {
                                'uz': 'ðŸ‡ºðŸ‡¿',
                                'en': 'ðŸ‡ºðŸ‡¸', 
                                'ru': 'ðŸ‡·ðŸ‡º',
                                'tr': 'ðŸ‡¹ðŸ‡·',
                                'fa': 'ðŸ‡®ðŸ‡·',
                                'zh': 'ðŸ‡¨ðŸ‡³'
                            };
                            const currentFlag = flags[currentLang] || 'ðŸ‡ºðŸ‡¿';
                            %>
                            <span class="language-flag"><%= currentFlag %></span>
                            <span class="language-code"><%= (currentLang || 'uz').toUpperCase() %></span>
                            <i class="las la-angle-down"></i>
                        </button>
                        <div class="language-panel" id="languagePanel">
                            <% languages.forEach(lang => { %>
                                <a href="/language/<%= lang.code %>" class="language-option <%= currentLang === lang.code ? 'active' : '' %>">
                                    <span class="language-flag"><%= lang.flag %></span>
                                    <span class="language-name"><%= lang.name %></span>
                                    <% if (currentLang === lang.code) { %>
                                        <i class="las la-check"></i>
                                    <% } %>
                                </a>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <!-- Theme Toggle -->
                <div class="auth-theme">
                    <button class="theme-toggle-btn" id="themeToggle" data-bs-toggle="tooltip" title="Toggle theme">
                        <i class="las la-moon"></i>
                    </button>
                </div>
            </div>
        </header>

        <!-- Login Form Container -->
        <div class="auth-content">
            <div class="login-container">
                <!-- Login Card -->
                <div class="login-card">
                    <div class="login-header">
                        <h1 class="login-title">Welcome Back</h1>
                        <p class="login-subtitle">Sign in to your SLEX account to continue</p>
                    </div>

                    <!-- Alert Messages -->
                    <div class="alert-container" id="alertContainer">
                        <% if (typeof message !== 'undefined' && message) { %>
                            <div class="alert alert-info alert-dismissible">
                                <i class="las la-info-circle"></i>
                                <span><%= message %></span>
                                <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                                    <i class="las la-times"></i>
                                </button>
                            </div>
                        <% } %>
                        
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger alert-dismissible">
                                <i class="las la-exclamation-triangle"></i>
                                <span><%= error %></span>
                                <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                                    <i class="las la-times"></i>
                                </button>
                            </div>
                        <% } %>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm" class="login-form" novalidate>
                        <!-- CSRF Token -->
                        <input type="hidden" name="csrfToken" value="<%= csrfToken %>">
                        
                        <!-- Email Field -->
                        <div class="form-group">
                            <label for="email" class="form-label">
                                <i class="las la-envelope"></i>
                                Email Address
                            </label>
                            <div class="form-input-wrapper">
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email" 
                                    class="form-input" 
                                    placeholder="Enter your email address"
                                    autocomplete="email"
                                    required
                                >
                                <div class="input-icon">
                                    <i class="las la-envelope"></i>
                                </div>
                                <div class="input-feedback" id="emailFeedback"></div>
                            </div>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label for="password" class="form-label">
                                <i class="las la-lock"></i>
                                Password
                            </label>
                            <div class="form-input-wrapper">
                                <input 
                                    type="password" 
                                    id="password" 
                                    name="password" 
                                    class="form-input" 
                                    placeholder="Enter your password"
                                    autocomplete="current-password"
                                    required
                                >
                                <div class="input-icon">
                                    <i class="las la-lock"></i>
                                </div>
                                <button type="button" class="password-toggle" id="passwordToggle">
                                    <i class="las la-eye"></i>
                                </button>
                                <div class="input-feedback" id="passwordFeedback"></div>
                            </div>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="form-options">
                            <label class="checkbox-label">
                                <input type="checkbox" id="rememberMe" name="rememberMe" class="checkbox-input">
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-text">Remember me</span>
                            </label>
                            <a href="/auth/forgot-password" class="forgot-link">
                                Forgot Password?
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" id="loginBtn" class="login-btn" disabled>
                            <span class="btn-text">Sign In</span>
                            <span class="btn-loader" style="display: none;">
                                <i class="las la-spinner la-spin"></i>
                                Signing in...
                            </span>
                        </button>

                        <!-- Security Info -->
                        <div class="security-info">
                            <div class="security-item">
                                <i class="las la-shield-alt"></i>
                                <span>Your connection is secure and encrypted</span>
                            </div>
                            <div class="security-item">
                                <i class="las la-clock"></i>
                                <span>Session expires automatically for security</span>
                            </div>
                        </div>
                    </form>

                    <!-- Additional Actions -->
                    <div class="login-footer">
                        <div class="register-link">
                            <span>Don't have an account?</span>
                            <a href="/auth/register">Create Account</a>
                        </div>
                        
                        <div class="help-links">
                            <a href="/help" class="help-link">
                                <i class="las la-question-circle"></i>
                                Need Help?
                            </a>
                            <a href="/contact" class="help-link">
                                <i class="las la-headset"></i>
                                Contact Support
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Platform Info -->
                <div class="platform-info">
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="las la-users"></i>
                        </div>
                        <div class="info-content">
                            <h4>For All Users</h4>
                            <p>Company admins and system administrators use the same login portal</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="las la-shield-alt"></i>
                        </div>
                        <div class="info-content">
                            <h4>Secure Access</h4>
                            <p>Advanced JWT-based authentication with automatic session management</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="las la-globe"></i>
                        </div>
                        <div class="info-content">
                            <h4>Multi-Language</h4>
                            <p>Platform available in 6 languages for global accessibility</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="auth-footer">
            <div class="footer-content">
                <div class="footer-links">
                    <a href="/terms" class="footer-link">Terms of Service</a>
                    <a href="/privacy" class="footer-link">Privacy Policy</a>
                    <a href="/security" class="footer-link">Security</a>
                </div>
                <div class="footer-copyright">
                    <span>&copy; <%= new Date().getFullYear() %> SLEX Platform. All rights reserved.</span>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/auth/js/modern-login.js"></script>
    <script src="/auth/js/jwt-login.js"></script>
    
    <!-- Background Animation -->
    <script>
        // Simple particle animation
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }
        
        // Initialize particles when page loads
        document.addEventListener('DOMContentLoaded', createParticles);
    </script>
</body>
</html>